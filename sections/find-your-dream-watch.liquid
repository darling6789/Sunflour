<div class="f-w-d-w-wrapper">
  <h2>{{ section.settings.heading }}</h2>
  <div class="f-w-d-w-trust-badges">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'badge' %}
          <div class="f-w-d-w-trust-badge">
            <div class="f-w-d-w-trust-badge-image-wrapper">
              <img src="{{ block.settings.image | img_url: 'master' }}" class="f-w-d-w-trust-badge-image" width='auto' height='auto'>
            </div>
            <div class="f-w-d-w-trust-badge-content">
              <h3>{{ block.settings.heading }}</h3>
              <p>{{ block.settings.description }}</p>
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>
<style>
  
  .f-w-d-w-trust-badge-content p {
    align-self: stretch;
    color: rgba(21, 21, 21, 0.5);
    text-align: center;
    font-family: Montserrat;
    font-size: 12px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%;
    margin: 0;
  }
  .f-w-d-w-trust-badge-content h3 {
    color: var(--Darker-Accent, #69575f);
    text-align: center;
    width: 100%;
    font-family: Montserrat;
    font-size: 15px;
    font-style: normal;
    font-weight: 600;
    line-height: 90%;
    font-variant: all-small-caps;
  }
  .f-w-d-w-trust-badge-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
    align-self: stretch;
  }
  .f-w-d-w-trust-badge-image {
    width: 59.4px;
    height: 67.5px;
    aspect-ratio: 59.4/67.5;
  }
  .f-w-d-w-trust-badge-image-wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 7.5px;
  }
  .f-w-d-w-trust-badge {
    display: flex;
    width: 186px;
    flex-direction: column;
    align-items: center;
    gap: 7.5px;
  }
  .f-w-d-w-trust-badges {
    display: flex;
    margin: 0 auto;
    width: 100%;
    max-width: 750px;
    justify-content: space-between;
    align-items: center;
    align-self: stretch;
  }
  .f-w-d-w-wrapper {
    max-width: 1400px;
    padding: 75px 0;
    gap: 37.5px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  .f-w-d-w-wrapper h2 {
    max-width: 555px;
    width: 100%;
    color: #000;
    text-align: center;
    font-family: Legitima;
    font-size: 37.5px;
    font-style: normal;
    font-weight: 500;
    line-height: 110%; /* 41.25px */
    margin: 0;
    padding: 0 20px;
  }

  /* Tablet Optimization (768px and below) */
  @media (max-width: 768px) {
    .f-w-d-w-wrapper {
      padding: 50px 20px;
      gap: 30px;
    }

    .f-w-d-w-wrapper h2 {
      font-size: 28px;
      line-height: 110%;
    }

    .f-w-d-w-trust-badges {
      max-width: 100%;
      flex-wrap: wrap;
      justify-content: center;
      gap: 24px;
    }

    .f-w-d-w-trust-badge {
      width: 150px;
      flex-shrink: 0;
    }

    .f-w-d-w-trust-badge-content h3 {
      font-size: 13px;
    }

    .f-w-d-w-trust-badge-content p {
      font-size: 11px;
    }
  }

  /* Mobile Optimization (480px and below) */
  @media (max-width: 480px) {
    .f-w-d-w-wrapper {
      padding: 40px 16px;
      gap: 24px;
    }

    .f-w-d-w-wrapper h2 {
      font-size: 24px;
      line-height: 110%;
    }

    .f-w-d-w-trust-badges {
      max-width: 100%;
      flex-direction: column;
      align-items: center;
      gap: 20px;
    }

    .f-w-d-w-trust-badge {
      width: 100%;
      max-width: 280px;
    }

    .f-w-d-w-trust-badge-image {
      width: 50px;
      height: 57px;
    }

    .f-w-d-w-trust-badge-content h3 {
      font-size: 12px;
    }

    .f-w-d-w-trust-badge-content p {
      font-size: 10px;
      line-height: 130%;
    }
  }
</style>
{% schema %}
{
  "name": "Find Your Dream Watch",
  "class": "find-your-dream-watch",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Should I?"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Badge",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Find Your Dream Watch"
    }
  ]
}
{% endschema %}
