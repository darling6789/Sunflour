</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const sectionId = '{{section.id}}';
  const slider = document.querySelector('#shopify-section-' + sectionId + ' .s-home-banner-slider');
  
  if (slider && typeof $ !== 'undefined' && $.fn.slick) {
    $(slider).slick({
      dots: true,
      arrows: true,
      infinite: true,
      speed: 500,
      fade: false,
      cssEase: 'ease-in-out',
      autoplay: true,
      autoplaySpeed: 5000,
      pauseOnHover: false,
      adaptiveHeight: false,
      prevArrow: '#shopify-section-' + sectionId + ' .s-slider-prev',
      nextArrow: '#shopify-section-' + sectionId + ' .s-slider-next',
      appendDots: '#shopify-section-' + sectionId + ' .s-slider-dots',
      responsive: [
        {
          breakpoint: 768,
          settings: {
            autoplaySpeed: 4000
          }
        }
      ]
    });
  }
});
</script>

