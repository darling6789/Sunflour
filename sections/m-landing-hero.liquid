<div class="m-landing-hero">
    <div class="m-landing-hero-des">
        <h1>{{ section.settings.heading }}</h1>
        <div class="m-landing-hero-text">
            {{ section.settings.description }}
        </div>

        <div class="m-landing-hero-btns">
            <a class="m-landing-hero-btn" href="{{ section.settings.btn_link }}" class="">{{ section.settings.btn_text }}</a>
            <a class="m-landing-hero-link" href="{{ section.settings.bottom_link }}" class="">{{ section.settings.link_text }}</a>
        </div>        
    </div>
    <div class="m-landing-hero-widget">
    {% if section.settings.widget_video %}
        {% assign poster_url = '' %}
        {% if section.settings.widget_image %}
        {% comment %} Use https: to avoid protocol-relative edge cases {% endcomment %}
        {% assign poster_url = 'https:' | append: section.settings.widget_image | image_url: width: 1600 %}
        {% endif %}

        {{ section.settings.widget_video | video_tag:
        autoplay: true,
        loop: true,
        muted: true,
        controls: false,
        playsinline: true,
        poster: poster_url
        }}
    {% elsif section.settings.widget_image %}
        <img
        src="{{ section.settings.widget_image | image_url: width: 1600 }}"
        alt=""
        loading="lazy"
        width="1600"
        height="auto">
    {% endif %}
    </div>
</div>

<style>
.m-landing-hero-section {
    width: 100%;
    background-image: url({{section.settings.back_image | img_url: 'master' }});
    {% comment %} background: linear-gradient(72deg, #2F1D25 4.9%, rgba(92, 73, 82, 0.80) 37.6%, rgba(120, 104, 111, 0.60) 51.63%, rgba(255, 255, 255, 0.20) 96.72%); {% endcomment %}
    background: url({{section.settings.back_image | img_url: 'master' }}) lightgray -98px -123.808px / 105.104% 141.982% no-repeat;
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    padding: 160px 140px 200px 90px;
    position: relative;
}
.m-landing-hero-section:after {
    content: '';
    background: linear-gradient(72deg, #2F1D25 4.9%, rgba(92, 73, 82, 0.80) 37.6%, rgba(120, 104, 111, 0.60) 51.63%, rgba(255, 255, 255, 0.20) 96.72%);
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
}
.m-landing-hero {
    width: 100%;
    max-width: 1680px;
    margin: auto;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 40px;
    z-index: 1;
    position: relative;
}
.m-landing-hero-des {
    width: 50%;
    {% comment %} padding-top: 70px; {% endcomment %}
}
.m-landing-hero-des h1 {
    color: #FFF;
    font-family: Legitima;
    font-size: 55px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%; /* 87.01px */
    margin: 0;
    margin-bottom: 20px;
    max-width: 640px;
}
.m-landing-hero-des .m-landing-hero-text {
    color: #EDE9EB;
    font-family: Montserrat;
    font-size: 23px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%; /* 60.907px */
    margin-bottom: 60px;
}
.m-landing-hero-des a.m-landing-hero-btn {
    display: block;
    text-decoration: none;
    border-radius: 19.173px;
    background: var(--Primary-Accent, #78686F);
    padding: 15px 40px;
    color: #FFF;
    font-family: Montserrat;
    font-size: 24px;
    font-style: normal;
    font-weight: 500;
    line-height: 140%; /* 42.276px */
    margin-bottom: 14px;
    width: fit-content;
}
.m-landing-hero-des a.m-landing-hero-link {
    display: block;
    text-decoration: none;
    color: #EDE9EB;
    font-family: Montserrat;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: 140%; /* 33.6px */
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-decoration-skip-ink: none;
    text-decoration-thickness: auto;
    text-underline-offset: auto;
    text-underline-position: from-font;
}
.m-landing-hero-widget {
    width: calc(50% - 40px);
    display: flex;
    align-items: flex-start;
    justify-content: flex-end;
    height: 100%;
}
.m-landing-hero-widget img {
    display: block;
    max-width: 100%;
    border-radius: 10px;
}
.m-landing-hero-btns {
    text-align: center;
    width: fit-content;
}
.m-landing-hero-widget video {
    display: block;
    max-width: 100%;
    border-radius: 10px;
    width: 538px;
    border: 5px solid #4D3942;
}

@media only screen and (max-width: 1600px) {
    .m-landing-hero-section {
        padding: 60px 40px;
    }
    .m-landing-hero {
        gap: 30px;
    }
    .m-landing-hero-des {
        width: 50%;
        padding-top: 20px;
    }
    .m-landing-hero-des h1 {
        font-size: 55px;
        margin-bottom: 20px;
    }
    .m-landing-hero-des .m-landing-hero-text {
        font-size: 23px;
        margin-bottom: 40px;
    }
    .m-landing-hero-des a.m-landing-hero-btn {
        padding: 15px 40px;
        font-size: 24px;
        margin-bottom: 14px;
    }
    .m-landing-hero-des a.m-landing-hero-link {
        font-size: 16px;
    }
    .m-landing-hero-widget {
        width: calc(50% - 30px);
    }
    .m-landing-hero-widget img {
        display: block;
    }
}

@media only screen and (max-width: 990px) {
    .m-landing-hero-section {
        padding: 60px 20px;
    }
    .m-landing-hero {
        width: 100%;
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
    }
    .m-landing-hero-des {
        width: 100%;
        padding-top: 0px;
        text-align: center;
    }
    .m-landing-hero-des h1 {
        font-size: 40px;
        margin: auto;
        margin-bottom: 20px;
    }
    .m-landing-hero-des .m-landing-hero-text {
        font-size: 20px;
        margin-bottom: 40px;
    }
    .m-landing-hero-des a.m-landing-hero-btn {
        border-radius: 19.173px;
        background: var(--Primary-Accent, #78686F);
        padding: 15px 40px;
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 15px;
        display: block;
        text-decoration: none;
    }
    .m-landing-hero-des a.m-landing-hero-link {
        font-size: 16px;
    }
    .m-landing-hero-btns {
        margin: auto;
    }
    .m-landing-hero-widget {
        width: 100%;
    }
    .m-landing-hero-widget img {
        display: block;
        width: 100%;
        max-width: 495px;
        margin: auto;
    }
    .m-landing-hero-widget video {
        margin: auto;
    }
}
</style>

{% schema %}
{    
    "name": "Landing page hero",
    "tag": "section",
    "class": "m-landing-hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "back_image",
            "label": "Background image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading" 
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button link"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link text"            
        },
        {
            "type": "url",
            "id": "bottom_link",
            "label": "Bottom link"
        },
        {
            "type": "image_picker",
            "id": "widget_image",
            "label": "Widget image"
        },
        {
            "type": "video",
            "id": "widget_video",
            "label": "Widget video (MP4)"
        }
    ],
    "presets": [
        {
            "name": "Landing page hero"
        }        
    ]
}
{% endschema %}
