<div class="s-home-gifts p-width p-m-width">
  <div class="s-home-gifts-header">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>  
  </div>

  <div class="s-home-gifts-row-wrap">
    <div class="s-home-gifts-row">
      {% for block in section.blocks %}
      <div class="s-home-gift">
        <div class="s-home-gift-image">
          <img src="{{ block.settings.image | img_url: 'large' }}">
        </div>
        <h3>{{ block.settings.text }}</h3>
        <p>{{ block.settings.des }}</p>
        <a class="s-home-gift-link s-btn" href="{{ block.settings.btn_link }}">{{ block.settings.btn_text }}</a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

<style>
.s-home-gifts-section {
	width: 100%;
	background-color: #faf9f6;
    padding: 60px 30px;
}
.s-home-gifts {

}
.s-home-gifts-header {
  width: 75%;
  margin: auto;
}
.s-home-gifts-header>h2 {
  text-align: center;
  margin-top: 0;
}
.s-home-gifts-header>p {
  text-align: center;
  margin-bottom: 20px;
}
.s-home-gifts-row-wrap {
    width: 100%;
}  
.s-home-gift-link {
    color: #121212;
    min-width: 200px;
}
.s-home-gifts-row {
	display: flex;
	align-items: stretch;
    flex-wrap: wrap;
	gap: 40px 2%;
}
.s-home-gifts-row>.s-home-gift {
	display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
	text-decoration: none;
	width: 32%;
}
.s-home-gift-image {
    width: 100%;
    overflow: hidden;
    height: 30vw;
    border-radius: 1rem;
    max-height: 270px;
}
.s-home-gift-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.s-home-gift h3 {
    margin-bottom: 0;
}
.s-home-gift p {
}

@media only screen and (max-width: 768px) {
  .s-home-gifts-section {
  	width: 100%;
  	background-color: #faf9f6;
    padding: 40px 20px;
  }
  .s-home-gifts {
    
  }
  .s-home-gifts-row-wrap {
    scrollbar-width: auto;
    scrollbar-color: #b42a18 #fff;
    overflow-x: scroll;
    overflow-y: hidden;
    scroll-behavior: smooth;
    padding-bottom: 20px;
  }
  .s-home-gifts-header {
    width: 100%;
  }
  .s-home-gifts-header>h2 {
    text-align: center;
    margin-top: 0;
  }
  .s-home-gifts-header>p {
    text-align: center;
    margin-bottom: 20px;
  }
  .s-home-gifts-row {
    width: fit-content;
    display: flex;
    flex-wrap: nowrap;
  }
  .s-home-gifts-row>.s-home-gift {
  	display: flex;
  	text-decoration: none;
  	width: 55vw;
  }
  .s-home-gift-image {
    width: 100%;
    overflow: hidden;
    height: 55vw;
    border-radius: 1rem;
  }
  .s-home-gift-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .s-home-gift h3 {
  	text-align: center;
  }
  .s-home-gift-link {
    width: 100%;
  }
}
</style>

{% schema %}
  {
    "name": "S home gifts",
    "tag": "section",
    "class": "s-home-gifts-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "textarea",
        "id": "description",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Title"
          },
          {
            "type": "textarea",
            "id": "des",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "btn_text",
            "label": "Button text"
          },
          {
            "type": "url",
            "id": "btn_link",
            "label": "Button link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "S home gifts"
      }
    ]
  }
{% endschema %}