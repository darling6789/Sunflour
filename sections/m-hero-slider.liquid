    }

    .m-hero-slider__controls {
      bottom: 15px;
      gap: 12px;
    }

    .m-hero-slider__button {
      width: 35px;
      height: 35px;
    }
  }
</style>

<div class="m-hero-slider" id="m-hero-slider-{{ section.id }}">
  <div class="m-hero-slider__viewport">
    <div class="m-hero-slider__track" id="slider-track-{{ section.id }}">
      {% for block in section.blocks %}
        <div
          class="m-hero-slider__slide"
          {{ block.shopify_attributes }}

        >
          <div class="m-hero-slider__slide-inner">
            <!-- Background layer -->
            <div
              class="m-hero-slider__background"
              {% if block.settings.background_color %}
                style="background-color: {{ block.settings.background_color }};"
              {% endif %}
            >
              {% if block.settings.background_image %}
                <img
                  src="{{ block.settings.background_image | image_url: width: 2000 }}"
                  alt="{{ block.settings.background_image.alt | escape }}"
                  width="{{ block.settings.background_image.width }}"
                  height="{{ block.settings.background_image.height }}"
                  loading="lazy"
                  style="object-position: {{ block.settings.background_position | default: 'center center' }};"
                >
              {% endif %}
            </div>

            <!-- Content -->
            <div class="m-hero-slider__content {% if block.settings.image_display_mode == 'full-width' or block.settings.image_display_mode == 'full-width-cover' %}m-hero-slider__content--full-width{% endif %}">
              <!-- Image side -->
              {% if block.settings.slide_image %}
                <div
                  class="m-hero-slider__image-wrapper {% if block.settings.image_display_mode == 'full-width' or block.settings.image_display_mode == 'full-width-cover' %}m-hero-slider__image-wrapper--full{% endif %}"
                  style="order: {% if block.settings.image_position == 'left' %}1{% else %}2{% endif %};"
                >
                  <img
                    src="{{ block.settings.slide_image | image_url: width: 1200 }}"
                    alt="{{ block.settings.slide_image.alt | escape }}"
                    width="{{ block.settings.slide_image.width }}"
                    height="{{ block.settings.slide_image.height }}"
                    loading="lazy"
                    class="image-fit-{% if block.settings.image_display_mode == 'full-width-cover' %}cover{% else %}contain{% endif %}"
                    style="object-position: {{ block.settings.image_alignment | default: 'center center' }};"
                  >
                </div>
              {% endif %}

              <!-- Text side -->
              <div
                class="m-hero-slider__text-wrapper m-hero-slider__text-wrapper--{{ block.id }}"
                style="order: {% if block.settings.image_position == 'left' %}2{% else %}1{% endif %}; {% if block.settings.text_alignment %}text-align: {{ block.settings.text_alignment }};{% endif %}"
              >
                <style>
                  @media only screen and (max-width: 749px) {
                    .m-hero-slider__text-wrapper--{{ block.id }} {
                      text-align: {{ block.settings.text_alignment_mobile | default: 'center' }} !important;
                    }
                  }
                </style>
                {% if block.settings.heading_1 != blank %}
                  <h2
                    class="m-hero-text m-hero-text--{{ block.settings.heading_1_size }}"
                    style="{% if block.settings.heading_1_color %}color: {{ block.settings.heading_1_color }};{% endif %}"
                  >
                    {{ block.settings.heading_1 }}
                  </h2>
                {% endif %}

                {% if block.settings.subheading != blank %}
                  <p
                    class="m-hero-text m-hero-text--subheading"
                    style="{% if block.settings.subheading_color %}color: {{ block.settings.subheading_color }};{% endif %}"
                  >
                    {{ block.settings.subheading }}
                  </p>
                {% endif %}

                {% if block.settings.heading_2 != blank %}
                  <h3
                    class="m-hero-text m-hero-text--{{ block.settings.heading_2_size }}"
                    style="{% if block.settings.heading_2_color %}color: {{ block.settings.heading_2_color }};{% endif %}"
                  >
                    {{ block.settings.heading_2 }}
                  </h3>
                {% endif %}

                {% if block.settings.body_text != blank %}
                  <div
                    class="m-hero-text m-hero-text--body"
                    style="{% if block.settings.body_text_color %}color: {{ block.settings.body_text_color }};{% endif %}"
                  >
                    {{ block.settings.body_text }}
                  </div>
                {% endif %}

                {% if block.settings.button_text != blank %}
                  <div class="m-hero-button__wrapper">
                    <a
                      href="{{ block.settings.button_link }}"
                      class="m-hero-button {% if block.settings.button_style == 'secondary' %}m-hero-button--secondary{% endif %}"
                      style="{% if block.settings.button_bg_color %}background-color: {{ block.settings.button_bg_color }};{% endif %} {% if block.settings.button_text_color %}color: {{ block.settings.button_text_color }};{% endif %}"
                    >
                      {{ block.settings.button_text }}
                    </a>
                  </div>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  <!-- Slider Controls -->
  {% if section.blocks.size > 1 %}
    <div class="m-hero-slider__controls">
      <button
        type="button"
        class="m-hero-slider__button m-hero-slider__button--prev"
        aria-label="Previous slide"
        onclick="moveSlide(-1, '{{ section.id }}')"
      >
        ‹
      </button>

      <div class="m-hero-slider__dots">
        {% for block in section.blocks %}
          <button
            type="button"
            class="m-hero-slider__dot {% if forloop.first %}active{% endif %}"
            aria-label="Go to slide {{ forloop.index }}"
            onclick="goToSlide({{ forloop.index0 }}, '{{ section.id }}')"
            data-slide-index="{{ forloop.index0 }}"
          ></button>
        {% endfor %}
      </div>

      <button
        type="button"
        class="m-hero-slider__button m-hero-slider__button--next"
        aria-label="Next slide"
        onclick="moveSlide(1, '{{ section.id }}')"
      >
        ›
      </button>
    </div>
  {% endif %}
</div>

<script>
  (function() {
    const sliders = {};

    function initSlider(sectionId) {
      const slider = {
        currentSlide: 0,
        totalSlides: document.querySelectorAll(`#m-hero-slider-${sectionId} .m-hero-slider__slide`).length,
        track: document.querySelector(`#slider-track-${sectionId}`),
        dots: document.querySelectorAll(`#m-hero-slider-${sectionId} .m-hero-slider__dot`)
      };

      sliders[sectionId] = slider;

      // Auto-rotate if enabled
      {% if section.settings.auto_rotate %}
        setInterval(() => {
          moveSlide(1, sectionId);
        }, {{ section.settings.change_slides_speed | times: 1000 }});
      {% endif %}
    }

    window.moveSlide = function(direction, sectionId) {
      const slider = sliders[sectionId];
      if (!slider) return;

      slider.currentSlide = (slider.currentSlide + direction + slider.totalSlides) % slider.totalSlides;
      updateSlider(sectionId);
    };

    window.goToSlide = function(index, sectionId) {
      const slider = sliders[sectionId];
      if (!slider) return;

      slider.currentSlide = index;
      updateSlider(sectionId);
    };

    function updateSlider(sectionId) {
      const slider = sliders[sectionId];
      if (!slider) return;

      // Move track
      slider.track.style.transform = `translateX(-${slider.currentSlide * 100}%)`;

      // Update dots
      slider.dots.forEach((dot, index) => {
        if (index === slider.currentSlide) {
          dot.classList.add('active');
        } else {
          dot.classList.remove('active');
        }
      });
    }

    initSlider('{{ section.id }}');
  })();
</script>

