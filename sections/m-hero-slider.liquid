<style>
  .m-hero-slider {
    width: 100%;
    position: relative;
    overflow: hidden;
    {% if section.settings.slide_height %}height: {{ section.settings.slide_height }}px;{% else %}min-height: 400px;{% endif %}
  }

  .m-hero-slider__viewport {
    position: relative;
    width: 100%;
  }

  .m-hero-slider__track {
    display: flex;
    transition: transform 0.5s ease-in-out;
  }

  .m-hero-slider__slide {
    min-width: 100%;
    position: relative;
  }

  .m-hero-slider__slide-inner {
    width: 100%;
    display: flex;
    align-items: center;
    position: relative;
    min-height: 400px;
  }

  /* Background layer */
  .m-hero-slider__background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .m-hero-slider__background img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Content wrapper */
  .m-hero-slider__content {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    position: relative;
    z-index: 1;
    gap: 40px;
    padding: 40px;
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Full-width image mode: no padding, no gap */
  .m-hero-slider__content--full-width {
    padding: 0;
    gap: 0;
    max-width: 100%;
  }

  /* Image side */
  .m-hero-slider__image-wrapper {
    flex: 0 0 auto;
    display: flex;
    max-width: 50%;
  }

  /* Full-width image: takes exactly 50%, edge to edge */
  .m-hero-slider__image-wrapper--full {
    flex: 0 0 50%;
    max-width: 50%;
    height: {{ section.settings.slide_height | default: 400 }}px;
  }

  /* Standard mode images */
  .m-hero-slider__image-wrapper img {
    max-width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Full-width mode images fill the height */
  .m-hero-slider__image-wrapper--full img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  .m-hero-slider__image-wrapper--full img.image-fit-cover {
    object-fit: cover;
  }

  /* Text side */
  .m-hero-slider__text-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  /* Text side with full-width image: add padding back to text only */
  .m-hero-slider__content--full-width .m-hero-slider__text-wrapper {
    padding: 50px;
    flex: 0 0 50%;
  }
  @media only screen and (max-width: 989px) {
    .m-hero-slider__content--full-width .m-hero-slider__text-wrapper {
      padding: 20px;
    }
  }

  /* Text block styles */
  .m-hero-text {
    margin: 0;
  }

  .m-hero-text--heading-xl {
    font-family: Legitima, serif;
    font-size: 48px;
    font-weight: 500;
    line-height: 110%;
    color: #4d3942;
  }

  .m-hero-text--heading-lg {
    font-family: Legitima, serif;
    font-size: 36px;
    font-weight: 500;
    line-height: 120%;
    color: #4d3942;
  }

  .m-hero-text--heading-md {
    font-family: Legitima, serif;
    font-size: 28px;
    font-weight: 500;
    line-height: 130%;
    color: #4d3942;
  }

  .m-hero-text--heading-sm {
    font-family: Montserrat, sans-serif;
    font-size: 20px;
    font-weight: 600;
    line-height: 140%;
    color: #4d3942;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .m-hero-text--subheading {
    font-family: 'High Tower Text', serif;
    font-size: 24px;
    font-weight: 400;
    font-style: italic;
    line-height: 140%;
    color: #69575f;
  }

  .m-hero-text--body {
    font-family: Montserrat, sans-serif;
    font-size: 16px;
    font-weight: 400;
    line-height: 160%;
    color: #757575;
  }

  /* Button styles */
  .m-hero-button__wrapper {
    margin-top: 12px;
  }

  .m-hero-button {
    display: inline-block;
    padding: 14px 32px;
    background-color: #69575f;
    color: #f5f5f5;
    font-family: Montserrat, sans-serif;
    font-size: 16px;
    font-weight: 500;
    line-height: 100%;
    text-decoration: none;
    border-radius: 6px;
    border: 1px solid #78686f;
    transition: all 0.3s ease;
  }

  .m-hero-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  .m-hero-button--secondary {
    background-color: transparent;
    color: #69575f;
    border: 2px solid #69575f;
  }

  .m-hero-button--secondary:hover {
    background-color: #69575f;
    color: #f5f5f5;
  }

  /* Slider Controls */
  .m-hero-slider__controls {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    align-items: center;
    gap: 20px;
    z-index: 10;
  }

  .m-hero-slider__button {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(105, 87, 95, 0.8);
    border: 1px solid #78686f;
    color: #f5f5f5;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .m-hero-slider__button:hover {
    background-color: rgba(105, 87, 95, 1);
    transform: scale(1.1);
  }

  .m-hero-slider__button:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .m-hero-slider__dots {
    display: flex;
    gap: 10px;
  }

  .m-hero-slider__dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: rgba(105, 87, 95, 0.3);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .m-hero-slider__dot.active {
    background-color: #69575f;
    width: 30px;
    border-radius: 5px;
  }

  /* Responsive styles */
  @media only screen and (max-width: 989px) {
    .m-hero-slider__content {
      gap: 30px;
      padding: 30px;
    }

    .m-hero-slider__image-wrapper {
      max-width: 45%;
    }

    .m-hero-text--heading-xl {
      font-size: 36px;
    }

    .m-hero-text--heading-lg {
      font-size: 28px;
    }

    .m-hero-text--heading-md {
      font-size: 24px;
    }

    .m-hero-text--heading-sm {
      font-size: 18px;
    }

    .m-hero-text--subheading {
      font-size: 20px;
    }

    .m-hero-text--body {
      font-size: 14px;
    }
  }

  @media only screen and (max-width: 749px) {
    .m-hero-slider {
      height: auto; min-height: auto;
    }
    .m-hero-slider__slide-inner {
      min-height: 300px;
    }

    .m-hero-slider__content {
      flex-direction: column;
      gap: 20px;
      padding: 30px 20px;
      height:100%;
    }

    .m-hero-slider__image-wrapper {
      max-width: 100%;
      width: 100%;
      justify-content: center;
    }

    .m-hero-slider__text-wrapper {
      text-align: center;
      align-items: center;
    }

    {% for block in section.blocks %}
      {% if block.settings.hide_image_mobile %}
      #m-hero-slider-{{ section.id }} .m-hero-slider__slide:nth-child({{ forloop.index }}) .m-hero-slider__image-wrapper {
        display: none;
      }
      {% endif %}
    {% endfor %}

    .m-hero-text--heading-xl {
      font-size: 32px;
    }

    .m-hero-text--heading-lg {
      font-size: 26px;
    }

    .m-hero-text--heading-md {
      font-size: 22px;
    }

    .m-hero-text--heading-sm {
      font-size: 16px;
      letter-spacing: 1.5px;
    }

    .m-hero-text--subheading {
      font-size: 18px;
    }

    .m-hero-text--body {
      font-size: 14px;
    }

    .m-hero-button {
      width: 100%;
