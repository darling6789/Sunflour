<div class="s-social-proof">
  <div class="s-social-proof-left">
    <h2>{{ section.settings.heading }}</h2>
    {% for block in section.blocks %}
      {% if forloop.index == 1 %}
        <div class="s-sp s-sp{{ forloop.index }}">
          <h3>{{ block.settings.name }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endif %}  
    {% endfor %}
  </div>
  <div class="s-social-proof-right">
    {% for block in section.blocks %}
      {% if forloop.index > 1 %}
        <div class="s-sp s-sp{{ forloop.index }}">
          <h3>{{ block.settings.name }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% endif %}  
    {% endfor %}
  </div>
</div>

<style>
.s-social-proof-section {
	width: 100%;
	background: #fef5f5;
	padding: 90px;
}
.s-social-proof {
	padding: 90px;
	margin: auto;
	display: flex;
}
.s-social-proof-left {
	margin-bottom: 0;
	display: flex;
	flex-direction: column;
	width: 50%;
}
.s-social-proof-left>h2 {
	text-align: left;
	width: 80%;
}
.s-sp {
	border-radius: 1rem;
	border: 1px solid #000;
	padding: 30px;
    background: #fff;
}
.s-sp>h3 {
	margin-top: 0;
}
.s-sp>p {
	margin-bottom: 0;
    line-height: 1.2;
}
.s-sp1 {
	max-width: 550px;
	margin-top: 60px;
	align-self: flex-end;
}
.s-social-proof-right {
	width: 50%;
	margin-right: 30px;
    margin-left: 30px;
}
.s-sp2 {
	width: 100%;
	margin-left: 90px;
	margin-bottom: 60px;
}
.s-sp3 {
	margin-bottom: 60px;
}

@media only screen and (max-width: 768px) {
  .s-social-proof-section {
  	padding: 30px;
  }
  .s-social-proof {
  	padding: 20px;
  	margin: auto;
  	display: flex;
    flex-wrap: wrap;
  }
  .s-social-proof-left {
  	display: flex;
  	flex-direction: column;
  	width: 100%;
  }
  .s-social-proof-left>h2 {
  	text-align: left;
  	width: 90%;
  }
  .s-sp {
  	border-radius: 1rem;
  	border: 1px solid #000;
  	padding: 20px;
    background: #fff;
  }
  .s-sp>h3 {
  	margin-top: 0;
  }
  .s-sp>p {
  	margin-bottom: 0;
      line-height: 1.2;
  }
  .s-sp1 {
  	max-width: 400px;
  	margin-top: 20px;
  	align-self: flex-end;
  }
  .s-social-proof-right {
  	width: 100%;
  	margin-right: 20px;
      margin-left: 20px;
  }
  .s-sp2 {
  	width: 100%;
    margin-top: 20px;
  	margin-left: 30px;
  	margin-bottom: 20px;
  }
  .s-sp3 {
  	margin-bottom: 20px;
  }  
}

</style>

{% schema %}
  {
    "name": "S social proof",
    "tag": "section",
    "class": "s-social-proof-section",
    "settings": [
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "text",
            "id": "name",
            "label": "Name"
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Content"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "S social proof"
      }
    ]
  }
{% endschema %}
