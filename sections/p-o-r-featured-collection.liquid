<div class="featured-collection-container" data-section-id="{{ section.id }}">
  <!-- Featured Collection Header -->
  <div class="featured-collection-header">
    <h2 class="featured-collection-title">{{ section.settings.collection_title }}</h2>
  </div>

  <!-- Carousel Wrapper -->
  <div class="carousel-wrapper">
    <!-- Left Navigation Button -->
    <button
      class="carousel-nav-button carousel-nav-prev"
      aria-label="Previous products"
      data-carousel-prev
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M15 19l-7-7 7-7" />
      </svg>
    </button>

    <!-- Carousel Viewport (shows 6 columns) -->
    <div class="carousel-viewport">
      <!-- Carousel Track (scrollable) -->
      <div class="carousel-track" data-carousel-track>
        {% if section.settings.collection != blank %}
          {% assign product_count = 0 %}
          {% for product in section.settings.collection.products %}
            {% if product_count < 26 %}
              <div class="carousel-slide">
                {% render 'product-card', product: product %}
              </div>
              {% assign product_count = product_count | plus: 1 %}
            {% endif %}
          {% endfor %}
        {% endif %}
      </div>
    </div>

    <!-- Right Navigation Button -->
    <button
      class="carousel-nav-button carousel-nav-next"
      aria-label="Next products"
      data-carousel-next
    >
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M9 5l7 7-7 7" />
      </svg>
    </button>
  </div>
</div>

