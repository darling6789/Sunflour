      <label for="dream-watch-notify-email" class="visually-hidden">Email Address</label>
      <input
        type="email"
        id="dream-watch-notify-email"
        class="dream-watch-notify-me-input"
        placeholder="Enter your email"
        required
        aria-required="true"
      />
      <button type="submit" id="dream-watch-notify-submit" class="dream-watch-notify-me-submit">
        <span>Notify Me</span>
      </button>
      <span id="dream-watch-notify-error" class="dream-watch-notify-me-error" role="alert" aria-live="polite"></span>
    </form>
  </div>
