<script>
  (function () {
    // Wait for DOM to be fully ready
    function initCarousel() {
      const container = document.querySelector('[data-section-id="{{ section.id }}"]');
      if (!container) return;

      const carouselTrack = container.querySelector('[data-carousel-track]');
      const carouselViewport = container.querySelector('.carousel-viewport');
      const prevButton = container.querySelector('[data-carousel-prev]');
      const nextButton = container.querySelector('[data-carousel-next]');

      if (!carouselTrack || !carouselViewport || !prevButton || !nextButton) return;

      // Configuration for different breakpoints
      function getCarouselConfig() {
        const width = window.innerWidth;
        if (width >= 1441) {
          return { columns: 6, cardWidth: 262.27, gap: 15 };
        } else if (width >= 1201) {
          return { columns: 5, cardWidth: 240, gap: 35 };
        } else if (width >= 769) {
          return { columns: 4, cardWidth: 220, gap: 30 };
        } else if (width >= 481) {
          return { columns: 3, cardWidth: 180, gap: 20 };
        } else {
          return { columns: 2, cardWidth: 160, gap: 16 };
        }
      }

      // Calculate scroll amount - scroll by exactly one column batch
      function getScrollAmount() {
        const config = getCarouselConfig();
        const singleSlideWidth = config.cardWidth + config.gap;
        const totalScrollWidth = singleSlideWidth * config.columns;
        return totalScrollWidth - config.gap;
      }

      // Update button disabled states
      function updateButtonStates() {
        const maxScroll = Math.max(0, carouselTrack.scrollWidth - carouselViewport.clientWidth);
        const isAtStart = carouselTrack.scrollLeft <= 1;
        const isAtEnd = carouselTrack.scrollLeft >= maxScroll - 1;

        prevButton.disabled = isAtStart;
        nextButton.disabled = isAtEnd;
      }

      // Navigation handlers
      prevButton.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const scrollAmount = getScrollAmount();
        carouselTrack.scrollBy({
          left: -scrollAmount,
          behavior: 'smooth',
        });
        setTimeout(updateButtonStates, 400);
      });

      nextButton.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        const scrollAmount = getScrollAmount();
        carouselTrack.scrollBy({
          left: scrollAmount,
          behavior: 'smooth',
        });
        setTimeout(updateButtonStates, 400);
      });

      // Update on scroll
      carouselTrack.addEventListener('scroll', updateButtonStates);

      // Update on window resize
      window.addEventListener('resize', () => {
        setTimeout(updateButtonStates, 150);
      });

      // Initialize button states after a small delay to ensure DOM is painted
      setTimeout(updateButtonStates, 200);
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initCarousel);
    } else {
      initCarousel();
    }
  })();

  // Product Card Navigation & Button Handlers
  (function () {
    const productCards = document.querySelectorAll('.product-card-link');

    productCards.forEach((card) => {
      const filterBtn = card.querySelector('[data-quick-view-trigger]');
      const buyNowBtn = card.querySelector('.btn-buy-now');

      if (buyNowBtn) {
        buyNowBtn.addEventListener('click', async (e) => {
          e.preventDefault();
          e.stopPropagation();

          const productHandle = filterBtn?.getAttribute('data-product-handle');

          if (!productHandle) {
            alert('Unable to add product to cart.');
            return;
          }

          try {
            buyNowBtn.disabled = true;
            buyNowBtn.querySelector('.btn-text').textContent = 'Adding...';

            const response = await fetch(`/products/${productHandle}.js`);
            if (!response.ok) throw new Error('Failed to fetch product');

            const productData = await response.json();
            const variantId = productData.variants?.[0]?.id;

            if (!variantId) throw new Error('No variant found');

            const config = fetchConfig('javascript');
            config.headers['X-Requested-With'] = 'XMLHttpRequest';
            delete config.headers['Content-Type'];

            const formData = new FormData();
            formData.append('id', variantId);
            formData.append('quantity', 1);
            config.body = formData;

            const cartResponse = await fetch(window.routes.cart_add_url, config);

            if (!cartResponse.ok) {
              const errorData = await cartResponse.text();
              try {
                const errorJson = JSON.parse(errorData);
                throw new Error(errorJson.message || `Error ${cartResponse.status}`);
              } catch (e) {
                throw new Error(`Failed to add to cart (Error ${cartResponse.status})`);
              }
            }

            window.location.href = window.routes.cart_url;
          } catch (error) {
            console.error('Error adding to cart:', error);
            buyNowBtn.disabled = false;
            buyNowBtn.querySelector('.btn-text').textContent = 'Buy Now';
            alert(error.message || 'Failed to add product to cart.');
          }
        });
      }
    });
  })();

  // Notify Me Button Handler
  (function () {
    const notifyMeButtons = document.querySelectorAll('[data-notify-me-trigger]');
    notifyMeButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
