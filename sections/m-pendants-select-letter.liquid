    position: relative;
}

.m-pendants-media-toggle {
    display: flex;
    margin-bottom: 20px;
    gap: 10px;
}

.m-pendants-media-btn {
    padding: 8px 16px;
    border: 1px solid #E0E0E0;
    background: #FFFFFF;
    color: #666666;
    font-family: Montserrat;
    font-size: 14px;
    font-weight: 400;
    cursor: pointer;
    transition: all 0.3s ease;
}

.m-pendants-media-btn.active {
