    }
}

@media only screen and (max-width: 749px) {
    .m-pendants-landing-hero-section {
        width: 100%;
        background-image: url({{ section.settings.back_image_mobile | img_url: 'master' }});
        background-size: cover;
        background-position: center;
        padding: 60px 20px 40px;
        position: relative;
    }
    .m-pendants-hero {
        flex-direction: column;
        gap: 20px;
    }
    .m-pendants-hero-des {
        width: 100%;
    }
    .m-pendants-hero-des h1 {
        font-size: 20px;
        letter-spacing: 3.5px;
        line-height: 1.5;
        margin-bottom: 10px;
    }
    .m-pendants-hero-des h2 {
        font-size: 20px;
        line-height: 1.5;
        margin-bottom: 10px;
    }
    .m-pendants-hero-des>p {
        font-size: 16px;
        line-height: 1.5;
    }
    .m-pendants-hero-des>a {
        display: flex;
        padding: 15px 40px;
        font-size: 14px;
    }
    .m-pendants-hero-video-wrap {
        width: 100%;
    }
    .m-pendants-hero-video-wrap video {
        display: block;
        width: 100%;
    }
    .m-pendants-hero-arrow {
        display: none;
    }
}

@media only screen and (max-width: 500px) {
