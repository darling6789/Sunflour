        margin-bottom: 6px;
    }
    .m-pendants-hero-des h2 {
        color: #FFF;
        font-family: "High Tower Text";
        font-size: 22px;
        font-style: italic;
        font-weight: 400;
        line-height: 35px; /* 159.091% */
        letter-spacing: -0.4px;
        margin-bottom: 8px;
    }
    .m-pendants-hero-des>p {
        color: #FFF;
        font-family: Montserrat;
        font-size: 16px;
        font-style: normal;
        font-weight: 400;
        line-height: 24px; /* 150% */
        margin: 0;
        margin-bottom: 20px;
    }
    .m-pendants-hero-des>a {
        display: flex;
        padding: 15px 40px;
        font-size: 14px;
        margin: auto;
    }
    .m-pendants-hero-video-wrap {
        width: 100%;
    }
    .m-pendants-hero-video-wrap video {
        display: block;
        width: 320px;
        height: 320px;
        max-width: 100%;
        max-height: calc(100vw - 40px);
        margin: auto;
    }
    .m-pendants-hero-arrow {
        display: none;
    }
}

@keyframes arrow-bounce {
    0% {
        transform: translateX(-50%) translateY(0);
    }
    50% {
        transform: translateX(-50%) translateY(10px);
    }
}
</style>

{% schema %}
{
    "name": "Pendants landing hero",
    "class": "m-pendants-landing-hero-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "back_image_desktop",
            "label": "Desktop Background image"
        },
        {
            "type": "image_picker",
            "id": "back_image_mobile",
            "label": "Mobile Background image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "richtext",
            "id": "subheading",
            "label": "Subheading"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description"
        },
        {
            "type": "text",
            "id": "btn_text",
            "label": "Button text"
        },
        {
            "type": "url",
            "id": "btn_link",
            "label": "Button link"
        },
        {
            "type": "video",
            "id": "video",
            "label": "Video"
        }
    ],
    "presets": [
        {
            "name": "Pendants landing hero"
        }
    ]
}
{% endschema %}
