<div class="search-consult">
  <div class="content">
    <div class="text-wrapper">Looking for Something Else?</div>
    <div class="frame">
      <p class="div">
        Let us know what you have in mind and we will get to work. Send us your request and one of our experts will
        contact you directly to consult, and ensure we find the watch of your dreams.
      </p>
      <a href="{% if section.settings.request_form_url %}{{section.settings.request_form_url}}{% else %}javascript:void(0){% endif %}" class="button">
      <button class="button"><div class="get-started">Send Your Request</div></button>
      </a>
    </div>
  </div>
</div>

<style>
  :root {
    --variable-collection-accent-darkest: rgba(77, 57, 66, 1);
  }
  .search-consult {
    flex-direction: column;
    align-items: center;
    gap: 10px;
    padding: 0px 10px 50px;
    display: flex;
    position: relative;
    background-color: #fff;
  }
  .search-consult .content {
    flex-direction: column;
    max-width: 1200px;
    align-items: flex-start;
    gap: 20px;
    width: 100%;
    flex: 0 0 auto;
    display: flex;
    position: relative;
  }
  .search-consult .text-wrapper {
    position: relative;
    width: fit-content;
    margin-top: -1px;
    font-family: 'Legitima-Italic';
    font-weight: 400;
    font-style: italic;
    color: #151515;
    font-size: 34px;
    letter-spacing: 0;
    line-height: 37.4px;
    white-space: nowrap;
  }
  .search-consult .frame {
    display: flex;
    align-items: flex-start;
    gap: 20px;
    position: relative;
    align-self: stretch;
    width: 100%;
    flex: 0 0 auto;
  }
  .search-consult .div {
    position: relative;
    flex: 1;
    margin-top: -1px;
    font-family: 'Montserrat';
    font-weight: 500;
    color: #000000;
    font-size: 18px;
    letter-spacing: 0;
    line-height: 25.2px;
  }
  .search-consult .button {
    all: unset;
    box-sizing: border-box;
    width: 250px;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    background-color: var(--variable-collection-accent-darkest);
    border-radius: 4px;
    overflow: hidden;
    display: flex;
    position: relative;
  }
  .button::before,
.button::after {
  content: none !important;
  display: none !important;
}
.frame a.button {
  cursor: pointer;
  padding: 0px;
}

  .search-consult a {
    text-decoration: none;
    color: inherit;
    display: inline-flex;
    border: none;
  }

  .search-consult a:visited {
    color: inherit;
  }

  .search-consult a:hover,
  .search-consult a:active {
    color: inherit;
    text-decoration: none;
  }

  .search-consult .get-started {
    position: relative;
    width: fit-content;
    margin-top: -1px;
    font-family: 'Montserrat';
    font-weight: 500;
    color: #ffffff;
    font-size: 18px;
    letter-spacing: 0;
    line-height: 18px;
    white-space: nowrap;
  }

  /* Responsive Design */
  /* Tablet View: 768px - 1024px */
  @media (max-width: 1024px) {
    .search-consult {
      padding: 0px 16px 40px;
    }

    .search-consult .text-wrapper {
      font-size: 28px;
      line-height: 32px;
    }

    .search-consult .div {
      font-size: 16px;
      line-height: 22px;
    }

    .search-consult .button {
      width: 220px;
      padding: 14px 24px;
    }

    .search-consult .get-started {
      font-size: 16px;
      line-height: 16px;
    }
  }

  /* Mobile View: 767px and below */
  @media (max-width: 767px) {
    .search-consult {
      padding: 0px 16px 32px;
    }

    .search-consult .content {
      gap: 16px;
    }

    .search-consult .text-wrapper {
      font-size: 24px;
      line-height: 28px;
      white-space: normal;
      text-align: center;
      width: 100%;
    }

    .search-consult .frame {
      flex-direction: column;
      gap: 16px;
    }

    .search-consult .div {
      font-size: 15px;
      line-height: 21px;
      text-align: center;
    }

    .search-consult .button {
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
      padding: 16px 24px;
    }

    .search-consult .get-started {
      font-size: 16px;
      line-height: 16px;
    }
  }

  /* Extra Small Mobile: 480px and below */
  @media (max-width: 480px) {
    .search-consult {
      padding: 0px 12px 28px;
    }

    .search-consult .text-wrapper {
      font-size: 22px;
      line-height: 26px;
    }

    .search-consult .div {
      font-size: 14px;
      line-height: 20px;
    }

    .search-consult .button {
      padding: 14px 20px;
    }

    .search-consult .get-started {
      font-size: 15px;
      line-height: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "POR - Request Section",
  "class": "p-o-r-request-section",
  "tag": "section",
  "settings": [
    {
      "type": "url",
      "id": "request_form_url",
      "label": "Request Form URL"
    }
  ],
  "presets": [
    {
      "name": "POR - Request Section"
    }
  ]
}
{% endschema %}
