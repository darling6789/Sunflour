{{ 'quick-add.css' | asset_url | stylesheet_tag }}
<script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>

<div class="m-collection-2">
    <div class="m-collection-2-image" onclick="document.location='{{ section.settings.collection.url }}';"></div>
    <div class="m-collection-2-body">
        <h2><a href="{{ section.settings.collection.url }}">{{ section.settings.heading }}</a></h2>

        <div class="m-collection-2-slider-wrap">
            <div class="m-collection-2-slider-left">{% render 'icon-left-arrow' %}</div>
            <div class="m-collection-2-slider">
                {% for product in section.settings.collection.products limit: 10 %}
                    {% render 'm-product-card', product: product %}
                {% endfor %}
            </div>
            <div class="m-collection-2-slider-right">{% render 'icon-right-arrow' %}</div>
        </div>

        {% if section.settings.collection_link %}
        <a class="m-collection-2-link" href="{{ section.settings.collection_link }}">{{ section.settings.collection_link_text }}</a>
        {% endif %}
    </div>
</div>

<style>
#shopify-section-{{ section.id }}.m-collection-2-section {
	width: 100%;
  {% if section.settings.back_color %}
  background: {{ section.settings.back_color }};
  {% endif %}
}
#shopify-section-{{ section.id }} .m-collection-2 {
    display: flex;
    align-items: stretch;
    justify-content: space-between;
    gap: 0;
}
#shopify-section-{{ section.id }} .m-collection-2-image {
    width: 43%;
    display: block !important;
    {% comment %} height: 660px; {% endcomment %}
    background-image: url({{ section.settings.image | img_url: 'master' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    cursor: pointer;
    {% unless section.settings.image_left %}
    order: 1;
    {% endunless %}
}
#shopify-section-{{ section.id }} .m-collection-2-body {
    width: 57%;
    height: 100%;
    padding: 50px;
}
.fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-image {
  width: 30%;
}
.fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-body {
  width: 70%;
}
#shopify-section-{{ section.id }} .m-collection-2-body>h2 {
    color: {{ section.settings.heading_color }};
    font-family: Legitima;
    font-size: 44px;
    font-style: normal;
    font-weight: 500;
    line-height: normal;
    margin: 0;
    margin-bottom: 30px;
}
#shopify-section-{{ section.id }} .m-collection-2-body>h2 a {
    text-decoration: none;
    color: {{ section.settings.link_color }};
}
#shopify-section-{{ section.id }} .m-collection-2-body>h2 a:hover {
    color: #69575f;
}
#shopify-section-{{ section.id }} .m-collection-2-slider-wrap {
	position: relative;
}
#shopify-section-{{ section.id }} .m-collection-2-slider-left {
	position: absolute;
    left: -25px;
    z-index: 1;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
}
#shopify-section-{{ section.id }} .m-collection-2-slider-right {
	position: absolute;
    right: -25px;
    z-index: 1;
    top: 50%;
    transform: translateY(-50%);
    cursor: pointer;
}
.m-collection-2-slider {

}
#shopify-section-{{ section.id }} .m-collection-2-slider .slick-track
{
    display: flex !important;
}

#shopify-section-{{ section.id }} .m-collection-2-slider .slick-slide
{
    height: inherit !important;
}
#shopify-section-{{ section.id }} .m-collection-2-link {
    color: {{ section.settings.link_color }};
    font-family: Montserrat;
    font-size: 18px;
    font-style: italic;
    font-weight: 500;
    line-height: normal;
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-decoration-skip-ink: none;
    text-decoration-thickness: auto;
    text-underline-offset: auto;
    text-underline-position: from-font;
    display: block;
    margin-top: 18px;
}


@media only screen and (max-width: 1440px) {
  .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-image, #shopify-section-{{ section.id }} .m-collection-2-image {
    width: 30%;
    {% comment %} height: 475px; {% endcomment %}
  }
  .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-body, #shopify-section-{{ section.id }} .m-collection-2-body {
    width: 70%;
    padding: 30px 37.5px 30px;
  }
  .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-body>h2, #shopify-section-{{ section.id }} .m-collection-2-body>h2 {
    color: {{ section.settings.heading_color }};
    /* Heading/Medium */
    font-family: Legitima;
    font-size: 34px;
    font-style: normal;
    font-weight: 500;
    line-height: 110%; /* 37.4px */
    margin-bottom: 10px;
  }
  .fine-jewelry .m-product-card, .m-product-card {
    max-width: 280px;
  }
  .fine-jewelry .m-product-card-title h3 a, .m-product-card-title h3 a {
    color: #666;

    /* Caption/Semibold */
    font-family: Montserrat;
    font-size: 12px;
    font-style: normal;
    font-weight: 600;
    line-height: 110%; /* 13.2px */
  }
  .fine-jewelry .m-product-card-price, .m-product-card-price {
    font-size: 12px;
  }
  .fine-jewelry .m-product-card-price-wrap, .m-product-card-price-wrap {
    margin-top: 5px;
  }
  #shopify-section-{{ section.id }} .m-collection-2-link {
    color: {{ section.settings.link_color }};
    font-family: Montserrat;
    font-size: 13.5px;
    font-style: italic;
    font-weight: 500;
    line-height: normal;
    text-decoration-line: underline;
    text-decoration-style: solid;
    text-decoration-skip-ink: none;
    text-decoration-thickness: auto;
    text-underline-offset: auto;
    text-underline-position: from-font;
    display: block;
    margin-top: 3px;
  }
}

@media only screen and (max-width: 990px) {
    #shopify-section-{{ section.id }} .m-collection-2 {
        display: flex;
        flex-wrap: wrap;
    }
    #shopify-section-{{ section.id }} .m-collection-2-image {
        width: 100%;
        display: block !important;
        height: 100vw;
        background-position: top;
        order: -1;
    }
    #shopify-section-{{ section.id }} .m-collection-2-body {
        width: 100%;
        padding: 25px;
    }
    #shopify-section-{{ section.id }} .m-collection-2-body>h2 {
        font-size: 32px;
        margin-bottom: 20px;
    }

    .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-image {
      width: 100%;
      height: 100vw;
    }
    .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-body {
      width: 100%;
      padding: 25px;
    }
    .fine-jewelry #shopify-section-{{ section.id }} .m-collection-2-body>h2 {
      font-size: 32px;
      margin-bottom: 10px;
    }
    #shopify-section-{{ section.id }} .m-collection-2-link {
      font-size: 16px;
      margin-top: 12px;
    }
}

</style>

<script>
$(document).ready(function(){
  $('#shopify-section-{{ section.id }} .m-collection-2-slider').slick({
    slidesToScroll: 1,
    variableWidth: true,
    infinite: true,
    arrows: true,
    dots: false,
    autoplay: true,
    autoplaySpeed: 3000,
    prevArrow: '#shopify-section-{{ section.id }} .m-collection-2-slider-left',
    nextArrow: '#shopify-section-{{ section.id }} .m-collection-2-slider-right'
  });
});
</script>

{% schema %}
{
  "name": "Custom collection 2",
  "class": "m-collection-2-section",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "image_left",
      "label": "Image left",
      "default": true
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#333"
    },
    {
      "type": "color",
      "id": "back_color",
      "label": "Background color"
    },
    {
      "type": "text",
      "id": "collection_link_text",
      "label": "Collection link text"
    },
    {
      "type": "url",
      "id": "collection_link",
      "label": "Collection link"
    },
    {
      "type": "color",
      "id": "link_color",
      "label": "Link color",
      "default": "#333"
    }
  ],
  "presets": [
    {
      "name": "Custom collection 2"
    }
  ]
}
{% endschema %}
