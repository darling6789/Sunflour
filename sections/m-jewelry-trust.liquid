<div class="m-jewelry-trust">
    <div class="m-jewelry-trust-image"></div>
    <div class="m-jewelry-trust-description">
        <h2>{{ section.settings.heading }}</h2>
        <div class="m-jewelry-trust-badges">
            {% for block in section.blocks %}
                <div class="m-jewelry-trust-badge">
                    <img src="{{ block.settings.image | img_url: 'master' }}">
                    <h3>{{ block.settings.heading }}</h3>
                    <p>{{ block.settings.description }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>

<style>
.m-jewelry-trust-section {
    width: 100%;
    padding-top: 75px;
    padding-bottom: 75px;
    background: #fff;
}
.m-jewelry-trust {
    width: 100%;
    max-width: 1920px;
    margin: auto;
    padding: 0 75px;
    display: flex;
    align-items: center;
}
.m-jewelry-trust-image {
    width: 50%;
    min-height: 400px;
    display: block !important;
    background: url({{ section.settings.image | img_url: 'master' }}) lightgray -25.623px -98.512px / 130.094% 124.51% no-repeat;
    background-position: center;
    background-size: cover;
}
.m-jewelry-trust-description {
    width: 50%;
    padding: 80px 40px;
    text-align: center;
}
.m-jewelry-trust-description h2 {
    margin: 0;
    margin-bottom: 40px;
    color: var(--Accent-Darkest, #4D3942);
    text-align: center;
    font-family: Legitima;
    font-size: 44px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%; /* 32px */
}
.m-jewelry-trust-badges {
    width: 100%;
    margin: auto;
    display: flex;
    align-items: flex-start;
    gap: 30px;
}
.m-jewelry-trust-badge {
    width: calc(33.3% - 20px);
}
.m-jewelry-trust-badge img {
    display: block;
    height: 90px;
    width: auto;
    margin: auto;
    object-fit: contain;
    margin-bottom: 10px;
}
.m-jewelry-trust-badge h3 {
    color: var(--Darker-Accent, #69575F);
    text-align: center;
    /* Caption/AllCaps/Semibold */
    font-family: Montserrat;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: 90%; /* 13.5px */
    font-variant: all-small-caps;
    text-transform: uppercase;
    height: 40px;
    width: 180px;
    margin: 10px auto;
    margin-bottom: 10px;
}
.m-jewelry-trust-badge p {
    color: rgba(21, 21, 21, 0.50);
    text-align: center;
    font-family: Montserrat;
    font-size: 14px;
    font-style: normal;
    font-weight: 400;
    line-height: 110%; /* 13.2px */
    margin: 0;
}

@media only screen and (max-width: 1440px) {
    .m-jewelry-trust-section {
        width: 100%;
        padding-top: 37.5px;
        padding-bottom: 37.5px;
        background: #fff;
    }
    .m-jewelry-trust {
        width: 100%;
        max-width: 1920px;
        margin: auto;
        padding: 0 37.5px;
        display: flex;
        align-items: center;
    }
    .m-jewelry-trust-image {
        width: 50%;
        min-height: 306px;
        display: block !important;
        background: url({{ section.settings.image | img_url: 'master' }}) lightgray -25.623px -98.512px / 130.094% 124.51% no-repeat;
        background-position: center;
        background-size: cover;
    }
    .m-jewelry-trust-description {
        width: 50%;
        padding: 40px 40px;
        text-align: center;
    }
    .m-jewelry-trust-description h2 {
        margin: 0;
        margin-bottom: 30px;
        color: var(--Accent-Darkest, #4D3942);
        text-align: center;
        font-family: Legitima;
        font-size: 32px;
        font-style: normal;
        font-weight: 500;
        line-height: 100%; /* 32px */
    }
    .m-jewelry-trust-badges {
        width: 100%;
        margin: auto;
        display: flex;
        align-items: flex-start;
        gap: 24px;
    }
    .m-jewelry-trust-badge {
        width: calc(33.3% - 16px);
    }
    .m-jewelry-trust-badge img {
        display: block;
        height: 70px;
        width: auto;
        margin: auto;
        object-fit: contain;
        margin-bottom: 5px;
    }
    .m-jewelry-trust-badge h3 {
        color: var(--Darker-Accent, #69575F);
        text-align: center;
        /* Caption/AllCaps/Semibold */
        font-family: Montserrat;
        font-size: 15px;
        font-style: normal;
        font-weight: 600;
        line-height: 90%; /* 13.5px */
        font-variant: all-small-caps;
        text-transform: uppercase;
        height: 26px;
        width: 150px;
        margin: 10px auto;
        margin-bottom: 8px;
    }
    .m-jewelry-trust-badge p {
        color: rgba(21, 21, 21, 0.50);
        text-align: center;
        font-family: Montserrat;
        font-size: 12px;
        font-style: normal;
        font-weight: 400;
        line-height: 110%; /* 13.2px */
        margin: 0;
    }
}

@media only screen and (max-width: 990px) {
    .m-jewelry-trust-section {
        width: 100%;
        padding-top: 40px;
        padding-bottom: 40px;
    }
    .m-jewelry-trust {
        padding: 0 40px;
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
    }
    .m-jewelry-trust-image {
        width: 100%;
        min-height: 400px;
    }
    .m-jewelry-trust-description {
        width: 100%;
        padding: 0px;
    }
    .m-jewelry-trust-description h2 {
        margin-bottom: 30px;
        font-family: Legitima;
        font-size: 32px;
    }
    .m-jewelry-trust-badges {
        gap: 12px;
    }
    .m-jewelry-trust-badge {
        width: calc(33.3% - 8px);
    }
    .m-jewelry-trust-badge img {
        height: 90px;
    }
    .m-jewelry-trust-badge h3 {
        font-size: 15px;
        margin: 10px auto 4px;
    }
    .m-jewelry-trust-badge p {
        font-size: 12px;
    }
}

@media only screen and (max-width: 600px) {
    .m-jewelry-trust-section {
        width: 100%;
        padding-top: 40px;
        padding-bottom: 40px;
    }
    .m-jewelry-trust {
        padding: 0 20px;
        display: flex;
        flex-wrap: wrap;
        gap: 40px;
    }
    .m-jewelry-trust-image {
        width: 100%;
        min-height: 350px;
    }
    .m-jewelry-trust-description {
        width: 100%;
        padding: 0px;
    }
    .m-jewelry-trust-description h2 {
        margin-bottom: 40px;
        font-family: Legitima;
        font-size: 32px;
    }
    .m-jewelry-trust-badges {
        gap: 30px;
        flex-wrap: wrap;
    }
    .m-jewelry-trust-badge {
        width: 100%;
    }
    .m-jewelry-trust-badge img {
        height: 70px;
    }
    .m-jewelry-trust-badge h3 {
        font-size: 15px;
        margin: 10px auto 4px;
    }
    .m-jewelry-trust-badge p {
        font-size: 12px;
    }
}
</style>

{% schema %}
{
    "name": "Jewelry landing trust",
    "tag": "section",
    "class": "m-jewelry-trust-section",
    "settings": [
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
    ],
    "blocks": [
        {
            "type": "badge",
            "name": "Badge",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "textarea",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Jewelry landing trust"
        }        
    ]
}
{% endschema %}
