<main class="hero" role="main" style="background-image: url({{ section.settings.hero_image | image_url: width: 1600 }}); background-size: cover; background-position: 50% 50%;">
  <section class="hero-container">
    <div class="hero-content">
      <div class="hero-content-bg">
        <div class="hero-text-group">
          <h1 class="hero-title">{{ section.settings.hero_title }}</h1>
          <p class="hero-description">
            {{ section.settings.hero_description }}
          </p>
        </div>
      </div>
    </div>
    <nav class="hero-actions" role="navigation" aria-label="Primary actions">
      <div class="hero-action-item">
        <button class="hero-button" data-scroll-to="in-stock-products" aria-label="{{ section.settings.button_one_text }}">
          <span class="hero-button-text">{{ section.settings.button_one_text }}</span>
        </button>
      </div>
      <div class="hero-action-item">
        <button class="hero-button" data-scroll-to="looking-for-something-else" aria-label="{{ section.settings.button_two_text }}">
          <span class="hero-button-text">{{ section.settings.button_two_text }}</span>
        </button>
      </div>
    </nav>
  </section>
</main>

<style>
  :root {
    --variable-collection-primary-light: rgba(248, 246, 242, 1);
    --variable-collection-primary-accent: rgba(120, 104, 111, 1);
  }

  .hero {
    display: flex;
    flex-direction: column;
    height: 400px;
    align-items: center;
    justify-content: center;
    gap: 10px;
    position: relative;
  }

  .hero .hero-container {
    display: inline-flex;
    flex-direction: column;
    justify-content: center;
    gap: 41px;
    padding: 26px 0px 0px;
    flex: 1;
    flex-grow: 1;
    align-items: center;
    position: relative;
    width: 100%;
  }

  .hero .hero-content {
    display: inline-flex;
    flex-direction: column;
    gap: 10px;
    flex: 0 0 auto;
    align-items: center;
    position: relative;
    text-align: center;
  }

  .hero .hero-content-bg {
    position: relative;
    width: 100%;
    height: 229px;
    border-radius: 252px / 114.5px;
    background: radial-gradient(
      50% 50% at 50% 50%,
      rgba(255, 255, 255, 1) 0%,
      rgba(255, 255, 255, 0.2) 46%,
      rgba(0, 0, 0, 0) 100%
    );
  }

  .hero .hero-text-group {
    display: inline-flex;
    flex-direction: column;
    gap: 10px;
    top: 48px;
    {% comment %} left: calc(50% - 188px); {% endcomment %}
    align-items: center;
    position: relative;
  }

  .hero .hero-title {
    position: relative;
    align-self: stretch;
    margin-top: -1px;
    margin-bottom: 0;
    font-family: {{ shop.fonts.heading_font.family }}, {{ shop.fonts.heading_font.fallback_families }};
    font-weight: 400;
    font-style: italic;
    color: #151515;
    font-size: 34px;
    text-align: center;
    letter-spacing: 0;
    line-height: 37.4px;
  }

  .hero .hero-description {
    position: relative;
    margin:0px;
    width: 376px;
    font-family: Montserrat;
    font-weight: 600;
    color: #151515;
    font-size: 16px;
    text-align: center;
    letter-spacing: -0.2px;
    line-height: 27.2px;
  }

  .hero .hero-actions {
    display: flex;
    width: 400px;
    justify-content: center;
    gap: 30px;
    flex: 0 0 auto;
    align-items: center;
    position: relative;
  }

  .hero .hero-action-item {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    flex: 1;
    flex-grow: 1;
  }

  .hero .hero-button {
    all: unset;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    padding: 16px 32px;
    position: relative;
    flex: 1;
    flex-grow: 1;
    background-color: var(--variable-collection-primary-light);
    border-radius: 4px;
    overflow: hidden;
    cursor: pointer;
  }

  .hero .hero-button-text {
    position: relative;
    width: fit-content;
    margin-top: -1px;
    font-family: Montserrat;, {{ shop.fonts.body_font.fallback_families }};
    font-weight: 500;
    color: #151515;
    font-size: 14px;
    letter-spacing: 0;
    line-height: 14px;
    white-space: nowrap;
    display: inline-block;
  }
  @media (max-width: 1024px) {
    .hero .hero-content-bg{
    width:100%;
    }
    .hero .hero-description{
    width:100%;
    padding:0 8px;
    }
    .hero .hero-actions{
    flex-direction: column;
    width: 100%;
    gap: 10px;    
    }
    .hero{
      height:460px
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const scrollButtons = document.querySelectorAll('[data-scroll-to]');

    scrollButtons.forEach(button => {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const targetId = this.getAttribute('data-scroll-to');
        let targetElement = null;

        // Map scroll target IDs to section IDs
        if (targetId === 'in-stock-products') {
          // Find the in-stock products section
          targetElement = document.querySelector('[data-section-id*="p-o-r-in-stock"]');
          if (!targetElement) {
            targetElement = document.querySelector('.in-stock-products-wrapper');
          }
        } else if (targetId === 'looking-for-something-else') {
          // Find the "Looking for something else" / request section
          targetElement = document.querySelector('[data-section-id*="p-o-r-in-request"]');
          if (!targetElement) {
            targetElement = document.querySelector('[data-section-id*="request"]');
          }
          if (!targetElement) {
            targetElement = document.querySelector('[class*="request"]');
          }
        }

        if (targetElement) {
          // Smooth scroll to the target element
          targetElement.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        } else {
          console.warn('Target section not found for:', targetId);
        }
      });
    });
  });
</script>

