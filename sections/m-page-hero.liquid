<div class="m-page-hero">
    <h1>{{ section.settings.heading }}</h1>
</div>

<style>
.m-page-hero-section {
    width: 100%;    
    padding: 93px 40px;
    max-width: 1920px;
    display: block;
    {% if section.settings.background_image != blank %}
    height: 411px;
    background-image: url({{ section.settings.background_image | img_url: 'master' }});
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    {% else %}
    height: 250px;    
    background: #fff;
    {% endif %}
}
.m-page-hero {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.m-page-hero h1 {
    display: block;
    margin: auto;
    text-align: center;
    {% if section.settings.background_image != blank %}
    color: #FFF;
    text-shadow: 2px 2px 3px rgba(21, 21, 21, 0.65);
    font-family: Legitima;
    font-size: 64px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%; /* 64px */
    {% else %}
    color: #000;
    text-align: center;
    font-family: Legitima;
    font-size: 64px;
    font-style: normal;
    font-weight: 500;
    line-height: 100%; /* 64px */
    {% endif %}
}

@media only screen and (max-width: 1440px) {
    .m-page-hero-section {
      height: 320px;
    }
    .m-page-hero h1 {
      font-size: 44px;
    }
}

@media only screen and (max-width: 749px) {
    .m-page-hero-section {
        {% if section.settings.background_image != blank %}
        height: 300px;
        {% else %}
        height: 140px;
        {% endif %}
        padding: 40px 20px;
        max-width: 100%;
    }
    .m-page-hero h1 {
        font-size: 44px;
        font-style: normal;
        font-weight: 500;
        line-height: 100%; /* 64px */
    }
}

</style>

{% schema %}
{
  "name": "Custom page hero",
  "tag": "section",
  "class": "m-page-hero-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About Us"
    }
  ],
  "presets": [
    {
      "name": "Custom page hero"
    }
  ]
}
{% endschema %}
