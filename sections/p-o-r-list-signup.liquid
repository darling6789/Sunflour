<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Modal elements
    const modal = document.getElementById('dealsModal');
    const dealsButton = document.getElementById('deals-button');
    const closeModalButton = document.getElementById('closeModal');
    const emailInput = document.getElementById('modal-email-input');
    const submitButton = modal.querySelector('.modal-button');
    const buttonText = submitButton.querySelector('.modal-button-text');
    const errorMessage = document.getElementById('modal-email-error');

    // Klaviyo configuration
    const KLAVIYO_PUBLIC_API_KEY = 'R6UT2Q';
    const KLAVIYO_LIST_ID = 'XT4BKB';
    const KLAVIYO_ENDPOINT = 'https://a.klaviyo.com/client/subscriptions/?company_id=' + KLAVIYO_PUBLIC_API_KEY;

    // Open modal when button is clicked
    dealsButton.addEventListener('click', function() {
      modal.classList.add('active');
      emailInput.focus();
      document.body.style.overflow = 'hidden';
    });

    // Close modal function
    function closeModal() {
      modal.classList.remove('active');
      emailInput.value = '';
      errorMessage.textContent = '';
      errorMessage.classList.remove('show');
      submitButton.disabled = false;
      buttonText.textContent = 'Subscribe';
      document.body.style.overflow = 'auto';
    }

    // Close modal when close button is clicked
    closeModalButton.addEventListener('click', closeModal);

    // Close modal when clicking outside of modal content
    modal.addEventListener('click', function(e) {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Close modal with Escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.classList.contains('active')) {
        closeModal();
      }
    });

    // Handle form submission
    submitButton.addEventListener('click', function(e) {
      e.preventDefault();

      // Validate email
      if (!emailInput.value || !emailInput.validity.valid) {
        errorMessage.textContent = 'Please enter a valid email address';
        errorMessage.classList.add('show');
        return;
      }

      // Clear previous error
      errorMessage.textContent = '';
      errorMessage.classList.remove('show');

      // Disable button to prevent multiple submissions
      submitButton.disabled = true;
      buttonText.textContent = 'Subscribing...';

      // Prepare request data - correct JSON:API format
      const requestData = {
        data: {
          type: 'subscription',
          attributes: {
            profile: {
              data: {
                type: 'profile',
                attributes: {
                  email: emailInput.value
                }
              }
            }
          },
          relationships: {
            list: {
              data: {
                type: 'list',
                id: KLAVIYO_LIST_ID
              }
            }
          }
        }
      };

      // Send to Klaviyo
      fetch(KLAVIYO_ENDPOINT, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'revision': '2024-10-15'
        },
        body: JSON.stringify(requestData)
      })
      .then(response => {
        if (response.ok) {
          // Success
          buttonText.textContent = "You're Subscribed!";
          submitButton.style.backgroundColor = '#4D3942';
          errorMessage.style.display = 'none';

          // Close modal after 2 seconds
          setTimeout(() => {
            closeModal();
            submitButton.style.backgroundColor = '';
          }, 2000);
        } else {
          // Error response
          errorMessage.textContent = 'There was an error subscribing. Please try again.';
          errorMessage.classList.add('show');
          submitButton.disabled = false;
          buttonText.textContent = 'Subscribe';
        }
      })
      .catch(error => {
        console.error('Subscription error:', error);
        errorMessage.textContent = 'There was an error subscribing. Please try again.';
        errorMessage.classList.add('show');
        submitButton.disabled = false;
        buttonText.textContent = 'Subscribe';
      });
    });

    // Allow Enter key to submit form
    emailInput.addEventListener('keypress', function(e) {
      if (e.key === 'Enter' && modal.classList.contains('active')) {
        submitButton.click();
      }
    });
  });
</script>
