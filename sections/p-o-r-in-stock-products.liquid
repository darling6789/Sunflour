<script>
  (function () {
    const container = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!container) return;

    const paginationWrapper = container.querySelector('[data-pagination]');
    if (!paginationWrapper) return;

    const productGrid = container.querySelector('[data-product-grid]');
    const allProductWrappers = Array.from(productGrid.querySelectorAll('.product-card-wrapper'));
    let paginationButtons = Array.from(paginationWrapper.querySelectorAll('.pagination-page'));

    const productsPerPage = 12;
    let currentPage = 1;
    let filterConfig = window.customFilterConfig || [];

    // ==================== FILTER CHECKING ====================
    // Check if a product passes the active filters
    function productPassesFilters(productElement) {
      const customFilterState = window.customFilterState;
      if (!customFilterState || !customFilterState.selectedFilters) {
        return true; // No filters applied
      }

      const selectedFilters = customFilterState.selectedFilters;

      // If no active filters, all products pass
      if (Object.keys(selectedFilters).length === 0 || !customFilterState.hasActiveFilters()) {
        return true;
      }

      // Check if product matches all selected filters (AND logic)
      for (let filterName in selectedFilters) {
        if (selectedFilters[filterName].length > 0) {
          const filterConfig = window.customFilterConfig.find(f => f.name === filterName);
          if (filterConfig) {
            const productValue = productElement.getAttribute(filterConfig.dataAttr);
            const shouldMatch = selectedFilters[filterName].includes(productValue?.trim());
            if (!shouldMatch) {
              return false;
            }
          }
        }
      }
      return true;
    }

    // ==================== GET VISIBLE PRODUCTS ====================
    // Get only products that pass filters
    // Note: Don't check display state - it's managed by pagination
    function getVisibleProducts() {
      return allProductWrappers.filter(wrapper => productPassesFilters(wrapper));
    }

    // ==================== PAGINATION ====================
    function recalculatePagination() {
      const visibleProducts = getVisibleProducts();
      const totalPages = Math.ceil(visibleProducts.length / productsPerPage) || 1;

      // Rebuild pagination buttons
      const paginationList = paginationWrapper.querySelector('.pagination-list');
      paginationList.innerHTML = '';

      for (let i = 1; i <= totalPages; i++) {
        const button = document.createElement('button');
        button.className = 'pagination-page' + (i === 1 ? ' active' : '');
        button.setAttribute('data-page', i);
        button.innerHTML = `<div class="pagination-text">${i}</div>`;

        button.addEventListener('click', function (e) {
          e.preventDefault();
          showPage(i);
        });

        paginationList.appendChild(button);
      }

      paginationButtons = Array.from(paginationList.querySelectorAll('.pagination-page'));
    }

    function showPage(pageNumber) {
      currentPage = pageNumber;
      const visibleProducts = getVisibleProducts();

      const startIndex = (pageNumber - 1) * productsPerPage;
      const endIndex = startIndex + productsPerPage;
      const productsToShow = visibleProducts.slice(startIndex, endIndex);

      // Hide all products
      allProductWrappers.forEach((wrapper) => {
        wrapper.style.display = 'none';
      });

      // Show only the products for this page
      productsToShow.forEach((wrapper) => {
        wrapper.style.display = '';
      });

      // Update active button
      paginationButtons.forEach((btn) => {
        btn.classList.remove('active');
      });
      const activeBtn = paginationButtons[pageNumber - 1];
      if (activeBtn) {
        activeBtn.classList.add('active');
      }

      // Scroll to top of products section
      container.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // ==================== INITIALIZE ====================
    // Show first page on load
    showPage(1);

    // ==================== LISTEN FOR FILTER CHANGES ====================
    document.addEventListener('customFiltersChanged', function (e) {
      // Reset to page 1 when filters change
      currentPage = 1;

      // Recalculate pagination based on new filtered results
      recalculatePagination();

      // Show page 1 with new filters applied
      showPage(1);
    });
  })();

  // Product Card Navigation & Button Handlers
  (function () {
    const productCards = document.querySelectorAll('.product-card-link');

    productCards.forEach((card) => {
      // Get filter button reference (for data attributes only)
      // Note: Filter button click is handled by quick view modal's event delegation
      const filterBtn = card.querySelector('[data-quick-view-trigger]');

      // Handle "Buy Now" button - add to cart instead of navigating
      const buyNowBtn = card.querySelector('.btn-buy-now');
      if (buyNowBtn) {
        buyNowBtn.addEventListener('click', async (e) => {
          e.preventDefault();
          e.stopPropagation();

          const productHandle = filterBtn?.getAttribute('data-product-handle');

          if (!productHandle) {
            alert('Unable to add product to cart.');
            return;
          }

          try {
            buyNowBtn.disabled = true;
            buyNowBtn.querySelector('.btn-text').textContent = 'Adding...';

            // Fetch product data to get variant ID
            const response = await fetch(`/products/${productHandle}.js`);
            if (!response.ok) throw new Error('Failed to fetch product');

            const productData = await response.json();
            const variantId = productData.variants?.[0]?.id;

            if (!variantId) throw new Error('No variant found');

            // Add to cart using theme's cart API
            const config = fetchConfig('javascript');
            config.headers['X-Requested-With'] = 'XMLHttpRequest';
            delete config.headers['Content-Type'];

            const formData = new FormData();
            formData.append('id', variantId);
            formData.append('quantity', 1);
            config.body = formData;

            console.log('Adding to cart with variant ID:', variantId);
            const cartResponse = await fetch(window.routes.cart_add_url, config);

            if (!cartResponse.ok) {
              const errorData = await cartResponse.text();
              console.error('Cart API error response:', errorData);

              // Try to parse JSON error response
              try {
                const errorJson = JSON.parse(errorData);
                const errorMessage =
                  errorJson.message || errorJson.description || `Failed to add to cart (Error ${cartResponse.status})`;
                throw new Error(errorMessage);
              } catch (e) {
                if (e instanceof SyntaxError) {
                  throw new Error(`Failed to add to cart (Error ${cartResponse.status})`);
                }
                throw e;
              }
            }

            const cartData = await cartResponse.json();

            // Remove the 'is-empty' class from cart if it was previously empty
            // This ensures proper display when transitioning from empty to full cart
            const cartNotification =
              document.querySelector('cart-notification') || document.querySelector('cart-drawer');
            if (cartNotification && cartNotification.classList.contains('is-empty')) {
              cartNotification.classList.remove('is-empty');
            }

            // Redirect to cart page
            window.location.href = window.routes.cart_url;
          } catch (error) {
            console.error('Error adding to cart:', error);
            buyNowBtn.disabled = false;
            buyNowBtn.querySelector('.btn-text').textContent = 'Buy Now';
            alert(error.message || 'Failed to add product to cart. Please try again.');
          }
        });
      }
    });
  })();

  // Notify Me Button Handler
  (function () {
    const notifyMeButtons = document.querySelectorAll('[data-notify-me-trigger]');
    notifyMeButtons.forEach((button) => {
      button.addEventListener('click', (e) => {
        e.preventDefault();
        e.stopPropagation();
        alert('Thank you for your interest! We will notify you when this item is back in stock.');
      });
    });
  })();
