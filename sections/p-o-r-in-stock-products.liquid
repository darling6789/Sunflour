<script>
  (function() {
    const container = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!container) return;

    const paginationWrapper = container.querySelector('[data-pagination]');
    if (!paginationWrapper) return;

    const productGrid = container.querySelector('[data-product-grid]');
    const productWrappers = Array.from(productGrid.querySelectorAll('.product-card-wrapper'));
    const paginationButtons = Array.from(paginationWrapper.querySelectorAll('.pagination-page'));
    
    const productsPerPage = 12;

    function showPage(pageNumber) {
      const startIndex = (pageNumber - 1) * productsPerPage;
      const endIndex = startIndex + productsPerPage;

      // Hide all products
      productWrappers.forEach(wrapper => {
        wrapper.style.display = 'none';
      });

      // Show products for current page
      for (let i = startIndex; i < endIndex && i < productWrappers.length; i++) {
        productWrappers[i].style.display = '';
      }

      // Update active button
      paginationButtons.forEach(btn => {
        btn.classList.remove('active');
      });
      paginationButtons[pageNumber - 1].classList.add('active');

      // Scroll to top of products section
      container.scrollIntoView({ behavior: 'smooth', block: 'start' });
    }

    // Add click handlers to pagination buttons
    paginationButtons.forEach((btn, index) => {
      btn.addEventListener('click', function() {
        showPage(index + 1);
      });
    });
  })();
</script>
