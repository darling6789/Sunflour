    }

    .pagination-page {
      padding: 5px 8px;
    }

    .pagination-text {
      font-size: 13px;
    }
  }
</style>
<script>
  (function () {
    const container = document.querySelector('[data-section-id="{{ section.id }}"]');
    if (!container) return;

    const paginationWrapper = container.querySelector('[data-pagination]');
    if (!paginationWrapper) return;

    const productGrid = container.querySelector('[data-product-grid]');
    const allProductWrappers = Array.from(productGrid.querySelectorAll('.product-card-wrapper'));
    let paginationButtons = Array.from(paginationWrapper.querySelectorAll('.pagination-page'));

    const productsPerPage = 12;
    let currentPage = 1;
    let filterConfig = window.customFilterConfig || [];

    // ==================== FILTER CHECKING ====================
    // Check if a product passes the active filters
    function productPassesFilters(productElement) {
      const customFilterState = window.customFilterState;

      // If filter state doesn't exist yet, show all products (initial load)
      if (!customFilterState || !customFilterState.selectedFilters) {
        return true; // No filters applied
      }

      const selectedFilters = customFilterState.selectedFilters;

      // If no active filters, all products pass
      if (!selectedFilters || Object.keys(selectedFilters).length === 0) {
        return true;
      }

      // Check if there are any active filters
      if (typeof customFilterState.hasActiveFilters === 'function') {
        if (!customFilterState.hasActiveFilters()) {
          return true;
        }
      }

      // Check if product matches all selected filters (AND logic)
      for (let filterName in selectedFilters) {
        if (selectedFilters[filterName] && selectedFilters[filterName].length > 0) {
          const filterConfig = window.customFilterConfig.find(f => f.name === filterName);
          if (filterConfig) {
            const productValue = productElement.getAttribute(filterConfig.dataAttr);
            const shouldMatch = selectedFilters[filterName].includes(productValue?.trim());
            if (!shouldMatch) {
              return false;
            }
          }
        }
      }
      return true;
    }

    // ==================== GET VISIBLE PRODUCTS ====================
    // Get only products that pass filters
    // Note: Don't check display state - it's managed by pagination
    function getVisibleProducts() {
      return allProductWrappers.filter(wrapper => productPassesFilters(wrapper));
    }

    // ==================== PAGINATION ====================
    function recalculatePagination() {
      const visibleProducts = getVisibleProducts();
      const totalPages = Math.ceil(visibleProducts.length / productsPerPage) || 1;

      // Rebuild pagination buttons
      const paginationList = paginationWrapper.querySelector('.pagination-list');
      paginationList.innerHTML = '';

      for (let i = 1; i <= totalPages; i++) {
        const button = document.createElement('button');
        button.className = 'pagination-page' + (i === 1 ? ' active' : '');
        button.setAttribute('data-page', i);
        button.innerHTML = `<div class="pagination-text">${i}</div>`;

        button.addEventListener('click', function (e) {
          e.preventDefault();
          showPage(i);
        });

        paginationList.appendChild(button);
      }

      paginationButtons = Array.from(paginationList.querySelectorAll('.pagination-page'));
    }

    function showPage(pageNumber) {
      currentPage = pageNumber;
      const visibleProducts = getVisibleProducts();

      const startIndex = (pageNumber - 1) * productsPerPage;
      const endIndex = startIndex + productsPerPage;
      const productsToShow = visibleProducts.slice(startIndex, endIndex);

      // Hide all products
      allProductWrappers.forEach((wrapper) => {
        wrapper.style.display = 'none';
      });

      // Show only the products for this page
      productsToShow.forEach((wrapper) => {
        wrapper.style.display = '';
      });

      // Update active button
      paginationButtons.forEach((btn) => {
        btn.classList.remove('active');
      });
      const activeBtn = paginationButtons[pageNumber - 1];
      if (activeBtn) {
        activeBtn.classList.add('active');
      }
    }

    // ==================== INITIALIZE ====================
    // Show first page on load
    // Use a small delay to ensure filter state is initialized
    function initializePagination() {
      if (window.customFilterState) {
        showPage(1);
      } else {
        // If filter state isn't ready, wait longer and try again
        setTimeout(initializePagination, 150);
      }
    }
    initializePagination();

    // ==================== LISTEN FOR FILTER CHANGES ====================
    document.addEventListener('customFiltersChanged', function (e) {
      // Reset to page 1 when filters change
      currentPage = 1;

      // Recalculate pagination based on new filtered results
      recalculatePagination();

      // Show page 1 with new filters applied
      showPage(1);
    });

    // Also listen for filter system initialization
    document.addEventListener('customFiltersReady', function (e) {
      // Reinitialize pagination when filter system is ready
      recalculatePagination();
      showPage(1);
    });
  })();
</script>
