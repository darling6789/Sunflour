<script>
  (function() {
    const notifyButtons = document.querySelectorAll('[data-dream-watch-notify-trigger]');
    const overlay = document.getElementById('dream-watch-notify-overlay');
    const form = document.getElementById('dream-watch-notify-form');
    const emailInput = document.getElementById('dream-watch-notify-email');
    const submitBtn = document.getElementById('dream-watch-notify-submit');
    const closeBtn = document.getElementById('dream-watch-notify-close');
    const errorMsg = document.getElementById('dream-watch-notify-error');
    const productName = document.getElementById('dream-watch-notify-product-name');

    let currentWatchRef = '';
    let currentProductId = '';
    let isSubmitting = false;

    notifyButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();
        currentWatchRef = button.getAttribute('data-watch-reference');
        currentProductId = button.getAttribute('data-product-id');
        const productTitle = button.getAttribute('data-product-title');
        productName.textContent = productTitle || 'this item';
        overlay.style.display = 'flex';
        emailInput.focus();
      });
    });

    closeBtn.addEventListener('click', function() {
      overlay.style.display = 'none';
      form.reset();
      errorMsg.textContent = '';
    });

    overlay.addEventListener('click', function(e) {
      if (e.target === overlay) {
        overlay.style.display = 'none';
        form.reset();
        errorMsg.textContent = '';
      }
    });

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      const email = emailInput.value.trim();
      if (!email) {
        errorMsg.textContent = 'Please enter a valid email.';
        return;
      }

      if (!currentWatchRef) {
        errorMsg.textContent = 'Product information is missing.';
        return;
      }

      if (isSubmitting) return;
      isSubmitting = true;
      submitBtn.disabled = true;
      errorMsg.textContent = '';

      fetch('https://dream-watch-api.vercel.app/api/notify-submit', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          email: email,
          watch_reference: currentWatchRef,
          product_id: currentProductId
        })
      })
        .then(function(response) {
          return response.json().then(function(data) {
            return { status: response.status, data: data };
          });
        })
        .then(function(result) {
          if (result.status === 200) {
            errorMsg.textContent = 'Success! Check your email for updates.';
            errorMsg.style.color = '#4caf50';
            form.reset();
            setTimeout(function() {
              overlay.style.display = 'none';
              errorMsg.style.color = '#d32f2f';
            }, 2000);
          } else if (result.status === 409) {
            errorMsg.textContent = 'You are already subscribed to updates for this item.';
          } else {
            errorMsg.textContent = result.data.error || 'An error occurred. Please try again.';
          }
        })
        .catch(function(error) {
          errorMsg.textContent = 'Network error. Please try again.';
          console.error('Error:', error);
        })
        .finally(function() {
          isSubmitting = false;
          submitBtn.disabled = false;
        });
    });
  })();
</script>

