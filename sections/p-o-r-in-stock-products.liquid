<div class="in-stock-products-container" data-section-id="{{ section.id }}">
  <div class="ispc-header">
    <h2>{{ section.settings.section_title }}</h2>
  </div>


  <!-- Filters - Custom Facets Drawer Design -->
  <script>
    window.customFilterConfig = [
      { name: 'dial-color', dataAttr: 'data-dial-color', label: 'Watch - Dial Color' },
      { name: 'bezel-type', dataAttr: 'data-bezel-type', label: 'Watch - Bezel Type' },
      { name: 'case-size', dataAttr: 'data-case-size', label: 'Case Size' },
      { name: 'model', dataAttr: 'data-model', label: 'Model' },
      { name: 'year', dataAttr: 'data-year', label: 'Year' },
      { name: 'condition', dataAttr: 'data-condition', label: 'Condition' },
      
    ];
  </script>
  {% render 'custom-facets' %}

  <div class="ispc-product-grid" data-product-grid>
    {% if section.settings.collection != blank %}
      {% assign product_index = 0 %}
      {% for product in section.settings.collection.products %}
        <div
          class="product-card-wrapper{% unless product.available %} product-card-unavailable{% endunless %}"
          data-product-index="{{ product_index }}"
          data-dial-color="{% if product.metafields.custom.watch_dial_color %}{{ product.metafields.custom.watch_dial_color | downcase }}{% endif %}"
          data-bezel-type="{% if product.metafields.custom.watch_bezel_type %}{{ product.metafields.custom.watch_bezel_type | downcase }}{% endif %}"
          data-case-size="{% if product.metafields.custom.watch_case_size %}{{ product.metafields.custom.watch_case_size | downcase }}{% endif %}"
          data-model="{% if product.metafields.custom.watch_reference %}{{ product.metafields.custom.watch_reference | downcase }}{% endif %}"
          data-year="{% if product.metafields.custom.watch_year %}{{ product.metafields.custom.watch_year | downcase }}{% endif %}"
          data-condition="{% if product.metafields.custom.watch_condition %}{% assign raw_condition = product.metafields.custom.watch_condition | downcase | strip %}{% case raw_condition %}{% when 'unworn' %}unworn{% when 'unworn (nos)' %}unworn{% when 'as is' %}retail-ready{% when 'slider' %}excellent{% when 'mint' %}very-good{% when 'very good' %}very-good{% when 'pre-owned' %}good{% when 'good' %}good{% else %}{{ raw_condition }}{% endcase %}{% endif %}"
        >
          {% render 'product-card', product: product %}
        </div>
        {% assign product_index = product_index | plus: 1 %}
      {% endfor %}
    {% endif %}
  </div>
  {% if section.settings.collection != blank %}
    {% assign available_count = 0 %}
    {% for product in section.settings.collection.products %}
      {% if product.available %}
        {% assign available_count = available_count | plus: 1 %}
      {% endif %}
    {% endfor %}
    {% if available_count > 12 %}
      {% assign total_pages = available_count | divided_by: 12.0 | ceil %}
      <div class="pagination-wrapper" data-pagination>
        <div class="pagination-list">
          {% for i in (1..total_pages) %}
            <button class="pagination-page{% if i == 1 %} active{% endif %}" data-page="{{ i }}">
              <div class="pagination-text">{{ i }}</div>
            </button>
          {% endfor %}
        </div>
      </div>
    {% endif %}
  {% endif %}
</div>
<!-- Quick View Modal -->
{% if section.settings.enable_quick_view %}
  {% render 'quick-view-modal' %}
{% endif %}

