<div class="m-icon-columns-wrap">
    <h2>{{ section.settings.heading }}</h2>
    <div class="m-icon-columns">
        {% for block in section.blocks %}
            <div class="m-icon-column">
                <img src="{{ block.settings.icon | img_url: 'master' }}">
                <h4>{{ block.settings.title }}</h4>
                <p>{{ block.settings.text }}</p>
            </div>
        {% endfor %}
    </div>
</div>

<style>
.m-icon-columns-section {
    width: 100%;
    background: {{ section.settings.back_color }};
    padding: 100px 40px;
}
.m-icon-columns-wrap {
    width: 100%;
    text-align: center;
}
.m-icon-columns-wrap h2 {
    color: {{ section.settings.title_color }};
    text-align: center;
    font-family: Legitima;
    font-size: 44px;
    font-style: normal;
    font-weight: 500;
    line-height: 110%; /* 55px */
    margin: 0;
    margin-bottom: 50px;
}
.m-icon-columns {
    display: flex;
    align-items: flex-start;
    justify-content: center;
    gap: 128px;
}
.m-icon-column {
    max-width: 248px;
    text-align: center;
}
.m-icon-column img {
    height: 90px;
    width: auto;
    display: block;
    margin: auto;
    margin-bottom: 10px;
}
.m-icon-column h4 {
    color: {{ section.settings.heading_color }};
    text-align: center;
    font-family: Montserrat;
    font-size: 15px;
    font-style: normal;
    font-weight: 600;
    line-height: 110%; /* 16.5px */
    font-variant: all-small-caps;
    margin: 0;
    margin-bottom: 4px;
}
.m-icon-column p {
    color: {{ section.settings.text_color }};
    text-align: center;
    font-family: Montserrat;
    font-size: 12px;
    font-style: normal;
    font-weight: 600;
    line-height: 110%; /* 13.2px */
    margin: 0;
}

@media only screen and (max-width: 1440px) {
  .m-icon-columns-section {
      width: 100%;
      padding: 75px 40px;
  }
  .m-icon-columns-wrap {
      width: 100%;
      text-align: center;
  }
  .m-icon-columns-wrap h2 {
      text-align: center;
      font-family: Legitima;
      font-size: 32px;
      font-style: normal;
      font-weight: 500;
      line-height: 110%; /* 55px */
      margin: 0;
      margin-bottom: 37.5px;
  }
  .m-icon-columns {
      display: flex;
      align-items: flex-start;
      justify-content: center;
      gap: 128px;
  }
  .m-icon-column {
      max-width: 186px;
      text-align: center;
  }
  .m-icon-column img {
      height: 70px;
      width: auto;
      display: block;
      margin: auto;
      margin-bottom: 10px;
  }
  .m-icon-column h4 {
      text-transform: uppercase;
      text-align: center;
      font-family: Montserrat;
      font-size: 15px;
      font-style: normal;
      font-weight: 600;
      line-height: 110%; /* 16.5px */
      font-variant: all-small-caps;
      margin: 0;
      margin-bottom: 10px;
  }
  .m-icon-column p {
      text-align: center;
      font-family: Montserrat;
      font-size: 12px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 13.2px */
      margin: 0;
  }
}

@media only screen and (max-width: 749px) {
    .m-icon-columns-section {
        padding: 60px 20px;
    }
    .m-icon-columns-wrap {
        width: 100%;
        text-align: center;
    }
    .m-icon-columns-wrap h2 {
        font-size: 32px;
        margin-bottom: 40px;
    }
    .m-icon-columns {
        gap: 30px;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    .m-icon-column {
        width: 100%;
        max-width: 248px;
        text-align: center;
    }
    .m-icon-column img {
        height: 80px;
        margin-bottom: 10px;
    }
    .m-icon-column h4 {
        font-size: 15px;
        margin-bottom: 4px;
    }
    .m-icon-column p {
        font-size: 12px;
        margin: 0;
    }
}

</style>

{% schema %}
{
  "name": "Custom icon columns",
  "tag": "section",
  "class": "m-icon-columns-section",
  "settings": [
    {
        "type": "color",
        "id": "back_color",
        "label": "Section background color",
        "default": "#fff"
    },
    {
        "type": "color",
        "id": "title_color",
        "label": "Section title color",
        "default": "#000"
    },
    {
        "type": "color",
        "id": "heading_color",
        "label": "Headings color",
        "default": "#69575F"
    },
    {
        "type": "color",
        "id": "text_color",
        "label": "Texts color",
        "default": "rgba(21, 21, 21, 0.50)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "icon_column",
      "name": "Icon Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon / Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom icon columns"
    }
  ]
}
{% endschema %}
