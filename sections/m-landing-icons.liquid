<div class="m-landing-icons">
	<h2>{{ section.settings.title }}</h2>

	<div class="m-landing-icons-wrap">
		{% for block in section.blocks %}
			<div class="m-landing-icon">
				<img src="{{ block.settings.icon | img_url: 'master' }}">
				<h4>{{ block.settings.title }}</h4>
				<p>{{ block.settings.text }}</p>
			</div>
		{% endfor %}
	</div>
</div>

<style>
.m-landing-icons-section {
	width: 100%;
	background: {{ section.settings.back_color }};
	padding: 80px 40px 100px;
}
.m-landing-icons {
	width: 100%;
	max-width: 821px;
	margin: auto;
}
.m-landing-icons h2 {
	color: var(--Primary-Light, #F8F6F2);
	text-align: center;
	/* Heading/Extra Large */
	font-family: Legitima;
	font-size: 55px;
	font-style: normal;
	font-weight: 500;
	line-height: 100%; /* 64px */
	margin: 0;
	margin-bottom: 60px;
}
.m-landing-icons-wrap {
	display: flex;
	align-items: flex-start;
	justify-content: center;
	gap: 59px;
	width: 100%;
}
.m-landing-icons-wrap .m-landing-icon {
	max-width: 150px;
	width: calc(25% - 35px);
    text-align: center;
}
.m-landing-icon>img {
	display: block;
	width: 60px;
	height: auto;	
    margin: auto;
	margin-bottom: 10px;
}
.m-landing-icon>h4 {
	color: var(--Primary-Light, #F8F6F2);
	text-align: center;
	/* Caption/AllCaps/Semibold */
	font-family: Montserrat;
	font-size: 15px;
	font-style: normal;
	font-weight: 600;
	line-height: 110%; /* 16.5px */
	font-variant: all-small-caps;
	margin: 0;	
	margin-bottom: 5px;
}
.m-landing-icon>p {
	color: rgba(248, 246, 242, 0.80);
	text-align: center;
	/* Caption/Semibold */
	font-family: Montserrat;
	font-size: 12px;
	font-style: normal;
	font-weight: 600;
	line-height: 110%; /* 13.2px */
	margin: 0;
}

@media only screen and (max-width: 1600px) {
	.m-landing-icons-section {
		width: 100%;
		background: {{ section.settings.back_color }};
		padding: 60px 40px 80px;
	}
	.m-landing-icons h2 {
		font-size: 55px;
		margin-bottom: 50px;
	}
}
@media only screen and (max-width: 749px) {
	.m-landing-icons-section {
		padding: 60px 20px 40px;
	}
	.m-landing-icons {
		max-width: 100%;
		margin: auto;
	}
	.m-landing-icons h2 {
		font-size: 36px;
		margin-bottom: 40px;
	}
	.m-landing-icons-wrap {
		flex-wrap: wrap;
		gap: 20px 30px;
	}
	.m-landing-icons-wrap .m-landing-icon {
		max-width: 150px;
		width: calc(50% - 10px);
	}
	.m-landing-icon>img {
		width: 60px;
		height: auto;	
		margin-bottom: 10px;
	}
	.m-landing-icon>h4 {
		font-size: 15px;
	}
	.m-landing-icon>p {
		font-size: 12px;
	}
}
</style>

{% schema %}
{
	"name": "Landing page icons",
	"tag": "section",
	"class": "m-landing-icons-section",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "color",
			"id": "back_color",
			"label": "Background color"
		}
	],
	"blocks": [
		{
			"name": "Icon",
			"type": "icon",
			"settings": [
				{
					"type": "image_picker",
					"id": "icon",
					"label": "Icon"
				},
				{
					"type": "text",
					"id": "title",
					"label": "Title"
				},
				{
					"type": "textarea",
					"id": "text",
					"label": "Text"
				}
			]
		}
	],
    "presets": [
        {
            "name": "Landing page icons"
        }
    ]
}
{% endschema %}
