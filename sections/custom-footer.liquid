<div class="custom-footer">
  <div class="custom-footer-top">
    <div class="custom-footer-form custom-footer-block">
      <img class="custom-footer-logo" src="{{ settings.logo | img_url: 'master' }}">
      {% comment %}
      <h2>{{ section.settings.form_heading }}</h2>
      <!-- <p>{{ section.settings.form_des }}</p> -->
      
      {%- form 'contact', id: 'FooterContactForm', class: 'footer-form' -%}
        {%- if form.posted_successfully? -%}
          <div class="form-status form-status-success" tabindex="-1" autofocus>
            {{- 'icon-success.svg' | inline_asset_content -}}
            <span>{{ 'templates.contact.form.post_success' | t }}</span>
          </div>
        {%- elsif form.errors -%}
          <div class="form-status form-status-error" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            <span>{{ 'templates.contact.form.error_heading' | t }}</span>
          </div>
          <ul class="form-error-list" role="list">
            {%- if form.errors contains 'email' -%}
              <li>
                <a href="#FooterContactForm-email" class="link">
                  {{ form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email }}
                </a>
              </li>
            {%- endif -%}
            {%- if form.errors contains 'birthday' -%}
              <li>
                <a href="#FooterContactForm-birthday" class="link">
                  Birthday {{ form.errors.messages.birthday }}
                </a>
              </li>
            {%- endif -%}
          </ul>
        {%- endif -%}

        <div class="footer-form-fields">
          <div class="form-group field--with-error">
            <label class="form-label field__label" for="FooterContactForm-email">
              Email Address <span aria-hidden="true">*</span>
            </label>
            <input
              autocomplete="email"
              type="email"
              id="FooterContactForm-email"
              class="form-input field__input"
              name="contact[email]"
              spellcheck="false"
              autocapitalize="off"
              value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'email' %}
                aria-invalid="true"
                aria-describedby="FooterContactForm-email-error"
              {% endif %}
              placeholder="your@email.com"
              required
            >
            {%- if form.errors contains 'email' -%}
              <small class="form-field-error" id="FooterContactForm-email-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </span>
              </small>
            {%- endif -%}
          </div>

          <div class="form-group field--with-error">
            <label class="form-label field__label" for="FooterContactForm-birthday">
              Birthday <span aria-hidden="true">*</span>
            </label>
            <input
              type="date"
              id="FooterContactForm-birthday"
              class="form-input field__input"
              name="contact[birthday]"
              value="{% if form.birthday %}{{ form.birthday }}{% endif %}"
              aria-required="true"
              {% if form.errors contains 'birthday' %}
                aria-invalid="true"
                aria-describedby="FooterContactForm-birthday-error"
              {% endif %}
              required
            >
            {%- if form.errors contains 'birthday' -%}
              <small class="form-field-error" id="FooterContactForm-birthday-error">
                <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                <span class="form__message">
                  Birthday {{ form.errors.messages.birthday }}
                </span>
              </small>
            {%- endif -%}
          </div>

          <div class="form-group">
            <button type="submit" class="submit-btn s-btn">
              submit
            </button>
          </div>
        </div>
      {%- endform -%}
      {% endcomment %}
    </div>

    {% for block in section.blocks %}
      {% if block.type == 'menu' %}
        {% assign menu = linklists[block.settings.menu] %}
        {% if menu != nil %}
          <div class="custom-footer-menu custom-footer-block">
            <h3>{{ block.settings.heading }}</h3>
            <ul>
              {% for link in menu.links %}
                <li><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        {% endif %}
      {% endif %}
    {% endfor %}

  </div>

  <div class="custom-footer-bottom">
    <div class="custom-footer-bottom-left">
      <div class="custom-footer-bottom-socials">
        <ul class="footer__list-social list-unstyled list-social" role="list">
            {%- if settings.social_twitter_link != blank -%}
              <li class="list-social__item">
                <a href="{{ settings.social_twitter_link }}" class="link list-social__link" >
                  {%- render 'icon-twitter' -%}
                  <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_facebook_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_facebook_link }}" class="link list-social__link" >
                  {%- render 'icon-facebook' -%}
                  <span class="visually-hidden">{{ 'general.social.links.facebook' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_pinterest_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_pinterest_link }}" class="link list-social__link" >
                  {%- render 'icon-pinterest' -%}
                  <span class="visually-hidden">{{ 'general.social.links.pinterest' | t }}</span>
                </a>
              </li>
            {%- endif -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_instagram_link }}" class="link list-social__link" >
                  {%- render 'icon-instagram' -%}
                  <span class="visually-hidden">{{ 'general.social.links.instagram' | t }}</span>
                </a>
              </li>
            {%- if settings.social_tiktok_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_tiktok_link }}" class="link list-social__link" >
                  {%- render 'icon-tiktok' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_tumblr_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_tumblr_link }}" class="link list-social__link" >
                  {%- render 'icon-tumblr' -%}
                  <span class="visually-hidden">{{ 'general.social.links.tumblr' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_snapchat_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_snapchat_link }}" class="link list-social__link" >
                  {%- render 'icon-snapchat' -%}
                  <span class="visually-hidden">{{ 'general.social.links.snapchat' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_youtube_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_youtube_link }}" class="link list-social__link" >
                  {%- render 'icon-youtube' -%}
                  <span class="visually-hidden">{{ 'general.social.links.youtube' | t }}</span>
                </a>
              </li>
            {%- endif -%}
            {%- if settings.social_vimeo_link != blank -%}
              <li class="list-social__item">
                <a target="_blank" href="{{ settings.social_vimeo_link }}" class="link list-social__link" >
                  {%- render 'icon-vimeo' -%}
                  <span class="visually-hidden">{{ 'general.social.links.vimeo' | t }}</span>
                </a>
              </li>
            {%- endif -%}
          </ul>
      </div>
      <div class="custom-footer-copyright">
        {{ section.settings.copyright }}
      </div>
    </div>
    <div class="custom-footer-bottom-right">
      <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
        <ul class="list list-payment" role="list">
          {%- for type in shop.enabled_payment_types -%}
            <li class="list-payment__item">
              {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
            </li>
          {%- endfor -%}
        </ul>
    </div>
  </div>
</div>

<style>
.custom-footer-section {
	padding: 60px;
	background-color: #fafafa;
	color: #121212;
}
.custom-footer {
	width: 100%;
}
.custom-footer-logo {
  max-width: 320px;
}
.custom-footer-top {
	width: 100%;
	display: flex;
	align-items: flex-start;
	gap: 40px;
}
.custom-footer-form {
	width: calc(25% - 30px);
}
.custom-footer-form h2 {
  color: #121212;
}
.custom-footer-form .field__input {
    --color: #121212;
    color: rgb(255, 245, 233);
    width: 100%;
    height: 40px;
    padding: 5px 10px;
    font-size: 16px;
    margin-top: 0px;
    min-height: 10px;
    text-align: left;
    font-family: Arial, Helvetica, sans-serif;
    font-weight: 400;
    line-height: 1.2;
    border-color: rgb(0, 0, 0);
    border-style: none;
    border-width: 0px;
    border-radius: 0px;
    margin-bottom: 0px;
    background-color: rgb(33, 31, 32);
    margin-bottom: 20px;
}
.custom-footer-form .field__input:focus {
    box-shadow: unset;
}
.custom-footer-form .field__input::placeholder {
    color: #121212;
    opacity: 1;
}
.custom-footer-form input[type="date"]::-webkit-calendar-picker-indicator {
  filter: brightness(0) invert(1); /* turns it white */
  cursor: pointer;
}
.custom-footer-form .s-btn {
    height: 40px;
    max-width: unset;
    width: 100%;
    border: unset;
    background-color: #b42a18;
}
  
.custom-footer-menu {
	width: calc(25% - 30px);
}
.custom-footer-menu h3 {
  text-align: right;
  color: #121212;
}
.custom-footer-menu ul {
  list-style: none;
  margin: 0;
  padding: 0;
}
.custom-footer-menu ul li {
  text-align: right;
}
.custom-footer-menu ul li a {
  text-decoration: none;
  color: #121212;
  font-size: 16px;
}
.custom-footer-bottom {
	display: flex;
	align-items: flex-start;
	gap: 40px;
	justify-content: space-between;
    margin-top: 20px;
}
.custom-footer-bottom-left {
	width: calc(50% - 40px);
}
.custom-footer-bottom-socials {
	width: 100%;
}
.custom-footer-bottom-socials>ul {
	list-style: none;
	margin: 0;
    justify-content: flex-start;
}
.custom-footer-bottom-socials>ul li svg, .custom-footer-bottom-socials>ul li svg path {
    fill: #121212;
}
.custom-footer-copyright {
    font-size: 12px;
    color: #121212;
}
.custom-footer-copyright a {
    color: #121212;
}
.custom-footer-bottom-right {
	width: calc(50% - 40px);
}
.custom-footer-bottom-right ul {
	list-style: none;
	margin: 0;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: 10px;
}

@media only screen and (max-width: 1200px) {
  .custom-footer-section {
  	padding: 30px;
  }
  .custom-footer-top {
  	gap: 30px;
    flex-wrap: wrap;
  }
  .custom-footer-form {
  	width: 100%;
  }
  .custom-footer-logo {
    display: block;
    max-width: 200px;
    margin: auto;
  }
  .custom-footer-form form {
    max-width: 500px;
    margin: auto;
  }
  .custom-footer-form h2 {
    text-align: center;
  }
  .custom-footer-form .field__input {
      height: 40px;
      padding: 5px 10px;
      font-size: 16px;
      margin-bottom: 20px;
  }
  .custom-footer-form .s-btn {
      height: 40px;
  }   
  .custom-footer-menu {
  	width: calc(33% - 20px);
  }
  .custom-footer-menu h3 {
    text-align: center;
  }
  .custom-footer-menu ul li {
    text-align: center;
  }
  .custom-footer-bottom {
  	display: flex;
  	gap: 30px;
    margin-top: 20px;
  }
  .custom-footer-bottom-left {
  	width: calc(50% - 40px);
  }
  .custom-footer-bottom-socials>ul {
  }
  .custom-footer-bottom-right {
  	width: calc(50% - 40px);
  }
  .custom-footer-bottom-right ul {
      display: flex;
      gap: 10px;
  }  
}

@media only screen and (max-width: 600px) {
  .custom-footer-section {
  	padding: 20px;
  }
  .custom-footer-top {
  	gap: 20px;
    flex-wrap: wrap;
  }
  .custom-footer-form {
  	width: 100%;
  }
  .custom-footer-form form {
    max-width: 500px;
    margin: auto;
  }
  .custom-footer-form h2 {
    text-align: left;
  }
  .custom-footer-form .field__input {
      height: 40px;
      padding: 5px 10px;
      font-size: 16px;
      margin-bottom: 20px;
  }
  .custom-footer-form .s-btn {
      height: 40px;
  }   
  .custom-footer-menu {
  	width: calc(50% - 10px);
  }
  .custom-footer-menu h3 {
    text-align: left;
  }
  .custom-footer-menu ul li {
    text-align: left;
  }
  .custom-footer-bottom {
  	display: flex;
    flex-wrap: wrap;
  	gap: 20px;
    margin-top: 20px;
  }
  .custom-footer-bottom-left {
  	width: 100%;
  }
  .custom-footer-bottom-socials>ul {
  }
  .custom-footer-bottom-right {
  	width: 100%;
  }
  .custom-footer-bottom-right ul {
      display: flex;
      gap: 10px;
  }
}
</style>

