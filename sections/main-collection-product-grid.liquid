<script>
  // Dream Watch Notify Me - Centralized Script (runs once per page)
  (function() {
    const notifyButtons = document.querySelectorAll('[data-dream-watch-notify-trigger]');
    const overlay = document.getElementById('dream-watch-notify-overlay');
    const form = document.getElementById('dream-watch-notify-form');
    const emailInput = document.getElementById('dream-watch-notify-email');
    const submitBtn = document.getElementById('dream-watch-notify-submit');
    const closeBtn = document.getElementById('dream-watch-notify-close');
    const errorMsg = document.getElementById('dream-watch-notify-error');
    const productName = document.getElementById('dream-watch-notify-product-name');

    let currentWatchRef = '';
    let currentProductId = '';
    let isSubmitting = false;

    notifyButtons.forEach(function(button) {
      button.addEventListener('click', function(e) {
        e.preventDefault();

        const watchRef = this.getAttribute('data-watch-reference');
        const productId = this.getAttribute('data-product-id');
        const title = this.getAttribute('data-product-title');

        if (!watchRef) {
          alert('This product does not have a watch reference assigned.');
          return;
        }

        currentWatchRef = watchRef;
        currentProductId = productId;

        productName.textContent = title;
        emailInput.value = '';
        errorMsg.textContent = '';
        submitBtn.disabled = false;
        submitBtn.querySelector('span').textContent = 'Notify Me';

        overlay.style.display = 'flex';
        emailInput.focus();
      });
    });

    closeBtn.addEventListener('click', function(e) {
      e.preventDefault();
      overlay.style.display = 'none';
    });

    overlay.addEventListener('click', function(e) {
      if (e.target === this) {
        this.style.display = 'none';
      }
    });

    form.addEventListener('submit', function(e) {
      e.preventDefault();

      if (isSubmitting) return;

      const email = emailInput.value.trim();
      const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

      if (!emailRegex.test(email)) {
        errorMsg.textContent = 'Please enter a valid email address.';
        return;
      }

      isSubmitting = true;
      submitBtn.disabled = true;
      const originalText = submitBtn.querySelector('span').textContent;
      submitBtn.querySelector('span').textContent = 'Submitting...';
      errorMsg.textContent = '';

      fetch('https://dream-watch-api.vercel.app/api/notify-submit', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          email: email,
          watch_reference: currentWatchRef,
          product_id: currentProductId,
        }),
      })
      .then(function(res) { return res.json(); })
      .then(function(data) {
        if (data.error || data.reason === 'already_subscribed') {
          errorMsg.textContent = 'This email is already subscribed for this model.';
          submitBtn.disabled = false;
          submitBtn.querySelector('span').textContent = originalText;
          isSubmitting = false;
        } else {
          submitBtn.querySelector('span').textContent = 'âœ“ Subscribed!';
          setTimeout(function() {
            overlay.style.display = 'none';
            submitBtn.disabled = false;
            submitBtn.querySelector('span').textContent = originalText;
            isSubmitting = false;
          }, 1500);
        }
      })
      .catch(function(error) {
        console.error('Notify Me Error:', error);
        errorMsg.textContent = 'Failed to subscribe. Please try again.';
        submitBtn.disabled = false;
        submitBtn.querySelector('span').textContent = originalText;
        isSubmitting = false;
      });
    });
  })();
</script>

