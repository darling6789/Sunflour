                  <p class="hero-pendants-regular-price">Reg. {{ block.settings.reg_price }}<span>USD</span></p>
                  <a class="hero-pendants-btn" href="{{ block.settings.btn_link }}">{{ block.settings.btn_text }}</a>
                </div>
              </div>
            </div> 
            <div class="hero-pendants-image">
              <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}" width="100%" height="100%">
            </div>      
          </div>
        </div>

