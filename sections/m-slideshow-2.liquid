          .hero-composed--{{ block.id }} .hero-composed-des h2,
          .hero-composed--{{ block.id }} .hero-composed-des p {
            color: {{ block.settings.text_color | default: '#151515' }};
          }
          .hero-composed--{{ block.id }} .hero-composed-des a {
            background: {{ block.settings.btn_bg_color | default: '#9C613A' }};
            color: {{ block.settings.btn_text_color | default: '#FFFFFF' }};
          }
          {% unless block.settings.back_image %}
          @media only screen and (min-width: 750px) {
            .hero-composed--{{ block.id }} .hero-composed-inner {
              background: linear-gradient(180deg, {{ block.settings.bg_gradient_color_1 | default: '#eadbdb' }} 0%, {{ block.settings.bg_gradient_color_2 | default: '#f5eaea' }} 35%, {{ block.settings.bg_gradient_color_3 | default: '#ffffff' }} 60%, {{ block.settings.bg_gradient_color_4 | default: '#f1e6e6' }} 100%) !important;
            }
          }
          {% endunless %}
          @media screen and (min-width: 750px) and (max-width: 1199px) {
            .hero-composed--{{ block.id }} .hero-composed-des a {
              background: {{ block.settings.btn_bg_color | default: '#9C613A' }};
              color: {{ block.settings.btn_text_color | default: '#FFFFFF' }};
            }
          }
          .hero-composed-corner h4 {
            color: {{ block.settings.corner_color }};
          }
          .hero-composed-corner .hero-composed-corner-price {
            color: {{ block.settings.corner_color }};
          }
          .hero-composed-corner .hero-composed-corner-compared-price {
            color: {{ block.settings.corner_color }};
          }

          @media only screen and (max-width: 749px) {
            .hero-composed-corner h4 {
              color: {{ block.settings.corner_color_mob }};
            }
            .hero-composed-corner .hero-composed-corner-price {
              color: {{ block.settings.corner_color_mob }};
            }
            .hero-composed-corner .hero-composed-corner-compared-price {
              color: {{ block.settings.corner_color_mob }};
            }
          }
        </style>

