              <div class="hero-composed-text-container">
                <h2 class="hero-composed-text-1">{{ block.settings.text1 }}</h2>
                <p class="hero-composed-text-2">{{ block.settings.text2 }}</p>
                <p class="hero-composed-text-3">{{ block.settings.text3 }}</p>
                <p class="hero-composed-text-4">{{ block.settings.text4 }}</p>
                <p class="hero-composed-text-5">{{ block.settings.text5 }}</p>
              </div>
              <div class="hero-composed-btns">
                {% if block.settings.btn_link_1 %}
                  <a href="{{ block.settings.btn_link_1 }}">{{ block.settings.btn_text_1 }}</a>
                {% endif %}
                {% if block.settings.btn_link_2 %}
                  <a href="{{ block.settings.btn_link_2 }}">{{ block.settings.btn_text_2 }}</a>
                {% endif %}
              </div>              
            </div>
            <div class="hero-composed-image">
              {% if block.settings.image %}
                <img src="{{ block.settings.image | image_url: width: 1200 }}" alt="{{ block.settings.image.alt | escape }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}">
              {% endif %}
            </div>

            <div class="hero-composed-corner">
              <div class="hero-composed-corner-texts">
                <h4 class="hero-composed-corner-heading">{{ block.settings.corner_text_1 }}</h4>
                <h4>{{ block.settings.corner_text_2 }}</h4>
              </div>
              <div class="hero-composed-corner-prices">
                <p class="hero-composed-corner-price">{{ block.settings.corner_price }}</p>
                <p class="hero-composed-corner-compared-price">{{ block.settings.corner_compared_price }}</p>
              </div>
            </div>
          </div>
        </div>

