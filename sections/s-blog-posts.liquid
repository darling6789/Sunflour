<div class="s-blog-posts p-width p-m-width">
  <div class="s-blog-posts-header">
    <h2>{{ section.settings.heading }}</h2>
  </div>

  <div class="s-blog-posts-row-wrap">
    <div class="s-blog-posts-row">
      {% for article in section.settings.blog.articles limit: section.settings.post_limit %}
      <a href="{{ article.url }}" class="s-blog-post">
        <div class="s-blog-post-image">
          <img src="{{ article.image | img_url: 'large' }}">
        </div>
        <h4>{{ article.title }}</h4>
      </a>
      {% endfor %}
    </div>
  </div>

  {% if section.settings.btn_text != blank and section.settings.btn_link != blank %}
    <a class="s-btn s-blog-posts-view-all" href="{{ section.settings.btn_link }}">{{ section.settings.btn_text }}</a>
  {% endif %}
</div>

<style>
.s-blog-posts-section {
	width: 100%;
	background-color: #faf9f6;
    padding: 60px 30px;
}
.s-blog-posts {

}
.s-blog-posts-header {
  width: 75%;
  margin: auto;
}
.s-blog-posts-header>h2 {
  text-align: center;
  margin-top: 0;
}
.s-blog-posts-header>p {
  text-align: center;
  margin-bottom: 20px;
}
.s-blog-posts-row-wrap {
    width: 100%;
}  
.s-blog-post-link {
    color: #121212;
    min-width: 200px;
    margin-top: 20px;
}
.s-blog-posts-row {
	display: flex;
	align-items: stretch;
    flex-wrap: wrap;
	gap: 40px 2%;
}
.s-blog-posts-row>.s-blog-post {
	display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
	text-decoration: none;
	width: 32%;
}
.s-blog-posts-row>.s-blog-post:hover h4 {
    text-decoration: underline;
}
.s-blog-post-image {
    width: 100%;
    overflow: hidden;
    height: 30vw;
    border-radius: 1rem;
    max-height: 270px;
}
.s-blog-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.s-blog-post h4 {
    margin-bottom: 0;
}
.s-blog-post p {
}
.s-blog-posts-view-all {
  display: block;
  margin: 30px auto 0;
  text-align: center;
}

@media only screen and (max-width: 768px) {
  .s-blog-posts-section {
  	width: 100%;
  	background-color: #faf9f6;
    padding: 40px 20px;
  }
  .s-blog-posts {
    
  }
  .s-blog-posts-row-wrap {
    scrollbar-width: auto;
    scrollbar-color: #b42a18 #fff;
    overflow-x: scroll;
    overflow-y: hidden;
    scroll-behavior: smooth;
    padding-bottom: 20px;
  }
  .s-blog-posts-header {
    width: 100%;
  }
  .s-blog-posts-header>h2 {
    text-align: center;
    margin-top: 0;
  }
  .s-blog-posts-header>p {
    text-align: center;
    margin-bottom: 20px;
  }
  .s-blog-posts-row {
    width: fit-content;
    display: flex;
    flex-wrap: nowrap;
  }
  .s-blog-posts-row>.s-blog-post {
  	display: flex;
  	text-decoration: none;
  	width: 55vw;
  }
  .s-blog-post-image {
    width: 100%;
    overflow: hidden;
    height: 55vw;
    border-radius: 1rem;
  }
  .s-blog-post-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .s-blog-post h4 {
  	text-align: center;
  }
  .s-blog-post-link {
    width: 100%;
  }
}
</style>

{% schema %}
  {
    "name": "S blog posts",
    "tag": "section",
    "class": "s-blog-posts-section",
    "settings": [
      {
        "type": "blog",
        "id": "blog",
        "label": "Blog"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "number",
        "id": "post_limit",
        "label": "Number of posts to show",
        "default": 6
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button text",
        "default": "View all articles"
      },
      {
        "type": "url",
        "id": "btn_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "S blog posts"
      }
    ]
  }
{% endschema %}