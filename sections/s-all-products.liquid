<div class="s-all-products page-width">
  <div class="s-all-products-header">
    <h1>{{ collection.title }}</h1>  
    {% comment %} <div class="s-all-products-btns">
      <a href="#" class="s-btn">local pickup</a>
      <a href="#" class="s-btn">nationwide delivery</a>
    </div> {% endcomment %}
  </div>
  
<div class="s-all-products-wrap">
  {% for product in collection.products %}
    {% render 's-product-card', product: product %}
  {% endfor %}
</div>
</div>

<style>
.s-all-products-section {
  width: 100%;
  padding-bottom: 60px;
}
.s-all-products {

}
.s-all-products-header {
  width: 100%;
}
.s-all-products-header h1 {
  text-align: center;
  margin-bottom: 80px;
}
.s-all-products-btns {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40px;
}
.s-all-products-btns .s-btn {
  min-width: 240px;
}
.s-all-products-wrap {
  margin-top: 40px;
  display: flex;
  flex-wrap: wrap;
  gap: 40px 20px;
}
.s-product-card {
  display: block;
  width: calc(25% - 15px);
  position: relative;
  border-radius: 20px;
  overflow: hidden;
  cursor: pointer;
}
.s-product-card-image {
  width: 100%;
  min-height: 300px;
  position: relative;
  line-height: 0;
}
.s-product-card-image-1, .s-product-card-image-2 {
  display: block;
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  margin: auto;
  object-position: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.s-product-card-image-2 {
  opacity: 0;
}
.s-product-card:hover .s-product-card-image-1 {
  opacity: 0;
}
.s-product-card:hover .s-product-card-image-2 {
  opacity: 1;
}
.s-product-card-des {
  width: 100%;
  position: absolute;
  padding: 20px;
  bottom: 60px;
  left: 0;
  background: #ffffffcc;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 20px;
}
.s-product-card-des h4 {
  margin: 0;
  font-weight: 600;
}
.s-product-price {
  line-height: 1;
}
.s-product-card-actions {
  width: fit-content;
  text-align: center;
  margin: auto;
  margin-top: 20px;
}
.s-add-to-cart-btn.s-btn {
  background-color: #873c17;
  color: #fff;
  text-decoration: none;
  max-width: 320px;
  height: 44px;
  padding: 0 30px;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40px;
  /* line-height: 120%; */
  cursor: pointer;
  font-weight: 400 !important;
  border: none;
  font-size: 14px;
}

@media only screen and (max-width: 990px) {
  .s-all-products-section {
    width: 100%;
    padding-bottom: 60px;
  }
  .s-all-products {
  
  }
  .s-all-products-header {
    width: 100%;
  }
  .s-all-products-header h1 {
    text-align: center;
    margin-bottom: 40px;
  }
  .s-all-products-btns {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 30px;
  }
  .s-all-products-wrap {
    margin-top: 30px;
    display: flex;
    flex-wrap: wrap;
    gap: 30px 15px;
  }
  .s-product-card {
    display: block;
    width: calc(33.3% - 10px);
    border-radius: 15px;
  }
  .s-product-card-image {
    min-height: 250px;
  }
  .s-product-card-image-1, .s-product-card-image-2 {
  }
  .s-product-card-image-2 {
    opacity: 0;
  }
  .s-product-card:hover .s-product-card-image-1 {
    opacity: 0;
  }
  .s-product-card:hover .s-product-card-image-2 {
    opacity: 1;
  }
  .s-product-card-des {
    padding: 20px;
  }
  .s-product-card-des h4 {
    margin: 0;
    font-weight: 600;
  }
}

@media only screen and (max-width: 600px) {
  .s-all-products-section {
    width: 100%;
    padding-bottom: 40px;
  }
  .s-all-products {
  
  }
  .s-all-products-header {
    width: 100%;
  }
  .s-all-products-header h1 {
    text-align: center;
  }
  .s-all-products-btns {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }
  .s-all-products-wrap {
    margin-top: 20px;
    display: flex;
    flex-wrap: wrap;
    gap: 20px 10px;
  }
  .s-product-card {
    display: block;
    width: calc(50% - 5px);
    border-radius: 15px;
  }
  .s-product-card-image {
    min-height: 250px;
  }
  .s-product-card-image-1, .s-product-card-image-2 {
  }
  .s-product-card-image-2 {
    opacity: 0;
  }
  .s-product-card:hover .s-product-card-image-1 {
    opacity: 0;
  }
  .s-product-card:hover .s-product-card-image-2 {
    opacity: 1;
  }
  .s-product-card-des {
    padding: 20px;
  }
  .s-product-card-des h4 {
    margin: 0;
    font-weight: 600;
  }
}
  
</style>

{% schema %}
{
  "name": "S all products",
  "tag": "section",
  "class": "s-all-products-section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "All Products"
    },
    {
      "type": "number",
      "id": "limit",
      "label": "Max products to show",
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "S all products"
    }
  ]
}
{% endschema %}