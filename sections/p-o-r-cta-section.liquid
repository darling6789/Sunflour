<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('.input-action');
    const emailInput = document.querySelector('#email-input');
    const button = document.querySelector('.CTA-section .button');
    const buttonText = button.querySelector('.get-started');
    const errorMessage = document.querySelector('#email-error');

    // Klaviyo configuration
    const KLAVIYO_PUBLIC_API_KEY = 'R6UT2Q';
    const KLAVIYO_LIST_ID = 'XT4BKB';
    const KLAVIYO_ENDPOINT = 'https://a.klaviyo.com/client/subscriptions/?company_id=' + KLAVIYO_PUBLIC_API_KEY;

    button.addEventListener('click', function(e) {
      e.preventDefault();

      // Validate email
      if (!emailInput.value || !emailInput.validity.valid) {
        errorMessage.textContent = 'Please enter a valid email address';
        errorMessage.style.display = 'block';
        return;
      }

      // Disable button to prevent multiple submissions
      button.disabled = true;
      buttonText.textContent = 'Subscribing...';

      // Prepare request data - correct JSON:API format
      const requestData = {
        data: {
          type: 'subscription',
          attributes: {
            profile: {
              data: {
                type: 'profile',
                attributes: {
                  email: emailInput.value
                }
              }
            }
          },
          relationships: {
            list: {
              data: {
                type: 'list',
                id: KLAVIYO_LIST_ID
              }
            }
          }
        }
      };

      // Send to Klaviyo
      fetch(KLAVIYO_ENDPOINT, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'revision': '2024-10-15'
        },
        body: JSON.stringify(requestData)
      })
      .then(response => {
        if (response.ok) {
          // Success
          buttonText.textContent = "You're Subscribed!";
          button.classList.add('subscribed');
          errorMessage.style.display = 'none';
          emailInput.value = '';
        } else {
          // Error response
          errorMessage.textContent = 'There was an error subscribing. Please try again.';
          errorMessage.style.display = 'block';
          button.disabled = false;
          buttonText.textContent = 'Subscribe';
        }
      })
      .catch(error => {
        console.error('Subscription error:', error);
        errorMessage.textContent = 'There was an error subscribing. Please try again.';
        errorMessage.style.display = 'block';
        button.disabled = false;
        buttonText.textContent = 'Subscribe';
      });
    });
  });
</script>

