<section class="CTA-section" aria-label="Call to Action Section">
  <div class="group">
    <div class="frame">
      <article class="subscribe">
        <h2 class="text-wrapper">Subscribe for Exclusive Offers</h2>
        <p class="div">
          Join our insider list to receive early access to special pricing, flash sales, and limited-time offers on
          Pre-Owned Rolex watches and other fine timepieces.
        </p>
        <form class="input-action" aria-label="Email subscription form" novalidate>
          <label for="email-input" class="visually-hidden">Email Address</label>
          <input
            class="input"
            id="email-input"
            name="email"
            placeholder="Email Address"
            type="email"
            required
            aria-required="true"
            aria-describedby="email-error"
          >
          <button class="button" type="submit" aria-label="Subscribe to newsletter">
            <span class="get-started">Subscribe</span>
          </button>
          <span id="email-error" class="error-message" role="alert" aria-live="polite"></span>
        </form>
      </article>
      <article class="dream-watch">
        <h2 class="text-wrapper">Find My Dream Watch</h2>
        <p class="div">
          Looking for a specific model or year? We will personally source your ideal timepiece based on your style,
          preferences, and budget.
        </p>
        <button class="get-started-wrapper" type="button" aria-label="Start searching for your dream watch" {% if section.settings.search_button_link %}onclick="window.location.href='{{ section.settings.search_button_link }}'"{% endif %}>
          <span class="get-started">Start My Search</span>
        </button>
      </article>
    </div>
  </div>
</section>

