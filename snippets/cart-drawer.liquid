{% comment %}
  Renders cart drawer

  Usage:
  {% render 'cart-drawer' %}
{% endcomment %}

{{ 'quantity-popover.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>
<script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>

<style>
  .drawer {
    visibility: hidden;
  }
  
  /* Set entire cart background white */
  .cart-drawer,
  .drawer__inner,
  .drawer__cart-items-wrapper,
  .cart-drawer__form {
    background: white !important;
  }

  .cart-drawer .cart-item {
    grid-template: unset;
  }
  
  /* Make cart items table full width */
  .drawer__cart-items-wrapper {
    width: 100% !important;
    max-width: 100% !important;
  }
  
  .drawer__cart-items-wrapper .cart-items {
    width: 100% !important;
    max-width: 100% !important;
    table-layout: auto;
  }
  
  /* Semi-mount-ring cart item styles */
  .cart-item--semi-mount .cart-item__semi-mount-wrapper {
    padding: 0;
    width: 100%;
  }
  
  .cart-item--semi-mount td {
    width: 100% !important;
    max-width: 100% !important;
    padding: 0 !important;
  }
  
  .cart-item__semi-mount-container {
    width: 100%;
    max-width: 100%;
    padding: 16px;
    background: white;
    display: flex;
    flex-direction: column;
    gap: 10px;
    box-sizing: border-box;
  }
  
  .cart-item__semi-mount-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
  
  .cart-item__semi-mount-image {
    flex-shrink: 0;
    width: 75px;
    min-width: 75px;
    height: 75px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .cart-item__semi-mount-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .cart-item__semi-mount-total-price {
    color: #78686F;
    font-size: 22px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    line-height: 1.1;
    white-space: nowrap;
    flex-shrink: 0;
  }
  
  .cart-item__semi-mount-details {
    display: flex;
    flex-direction: column;
    gap: 6px;
    width: 100%;
  }
  
  .cart-item__semi-mount-product-row,
  .cart-item__semi-mount-diamond-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    width: 100%;
    gap: 10px;
  }
  
  .cart-item__semi-mount-product-name {
    flex: 1;
    min-width: 0;
    max-width: none;
    color: #4D3942;
    font-size: 14px;
    font-family: 'Legitima', serif;
    font-weight: 500;
    line-height: 1.1;
    word-wrap: break-word;
  }
  
  .cart-item__semi-mount-separator {
    color: #000000;
  }
  
  .cart-item__semi-mount-size {
    color: #4D3942;
  }
  
  .cart-item__semi-mount-product-price,
  .cart-item__semi-mount-diamond-price {
    flex-shrink: 0;
    color: #000000;
    font-size: 12px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 400;
    line-height: 1.1;
    white-space: nowrap;
    margin-left: 10px;
  }
  
  .cart-item__semi-mount-diamond-name {
    flex: 1;
    min-width: 0;
    max-width: none;
    color: #4D3942;
    font-size: 12px;
    font-family: 'Montserrat', sans-serif;
    line-height: 1.1;
    word-wrap: break-word;
  }
  
  .cart-item__semi-mount-diamond-label {
    font-weight: 600;
  }
  
  .cart-item__semi-mount-diamond-details {
    font-weight: 400;
  }
  
  .cart-item__semi-mount-actions {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 35px;
    width: 100%;
    flex-wrap: nowrap;
  }

  .cart-item__semi-mount-actions .cart-item__quantity {
    padding-left: 0;
  }
  
  .cart-item--semi-mount .cart-item__quantity {
    flex-shrink: 0;
  }
  
  .cart-item--semi-mount .cart-item__quantity-wrapper {
    width: 144px;
    height: 48px;
    outline-offset: -1px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-shrink: 0;
  }

  quantity-popover .quantity {
    background: unset;
  }
  
  .cart-item--semi-mount cart-remove-button {
    flex-shrink: 0;
  }
  
  .cart-item--semi-mount .quantity__button {
    width: 24px;
    height: 24px;
    background: #D9D9D9;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: 0;
    flex-shrink: 0;
    margin: auto;
  }
  
  /* Quantity button icons are now inline SVGs, no additional styling needed */
  
  .cart-item--semi-mount .quantity__input {
    color: #4D3942;
    font-size: 20px;
    font-family: 'Montserrat', sans-serif;
    font-weight: 600;
    line-height: 27.50px;
    border: none;
    background: transparent;
    text-align: center;
    width: auto;
    min-width: 30px;
    flex: 1;
    max-width: 60px;
    padding: 0;
  }
  
  .cart-item--semi-mount .cart-item__remove-button {
    width: 24px;
    height: 24px;
    background: unset;
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: 0;
    flex-shrink: 0;
  }
  
  .cart-item--semi-mount .cart-item__remove-button svg {
    width: 24px;
    height: 24px;
  }
  
  /* Adjust height for items with diamond */
  .cart-item--semi-mount:has(.cart-item__semi-mount-diamond-row) .cart-item__semi-mount-container {
    min-height: 192px;
    position: relative;
  }
  
  /* Responsive adjustments */
  @media (max-width: 749px) {
    .cart-item__semi-mount-image {
      width: 60px;
      min-width: 60px;
      height: 60px;
    }
    
    .cart-item__semi-mount-container {
      padding: 12px;
    }
    
    .cart-item__semi-mount-actions {
      gap: 20px;
    }
    
    .cart-item--semi-mount .cart-item__quantity-wrapper {
      width: 120px;
    }
    
    .cart-item__semi-mount-total-price {
      font-size: 18px;
    }
    
    .cart-item__semi-mount-product-name {
      font-size: 12px;
    }
    
    .cart-item__semi-mount-diamond-name {
      font-size: 11px;
    }
    
    .cart-item--semi-mount .quantity__input {
      font-size: 20px;
    }
  }
</style>

<cart-drawer class="drawer{% if cart == empty %} is-empty{% endif %}">
  <div id="CartDrawer" class="cart-drawer">
    <div id="CartDrawer-Overlay" class="cart-drawer__overlay"></div>
    <div
      class="drawer__inner gradient color-{{ settings.cart_color_scheme }}"
      role="dialog"
      aria-modal="true"
      aria-label="{{ 'sections.cart.title' | t }}"
      tabindex="-1"
    >
      {%- if cart == empty -%}
        <div class="drawer__inner-empty">
          <div class="cart-drawer__warnings center{% if settings.cart_drawer_collection != blank %} cart-drawer__warnings--has-collection{% endif %}">
            <div class="cart-drawer__empty-content">
              <h2 class="cart__empty-text">{{ 'sections.cart.empty' | t }}</h2>
              <button
                class="drawer__close"
                type="button"
                onclick="this.closest('cart-drawer').close()"
                aria-label="{{ 'accessibility.close' | t }}"
              >
                <span class="svg-wrapper">
                  {{- 'icon-close.svg' | inline_asset_content -}}
                </span>
              </button>
              <a href="{{ routes.all_products_collection_url }}" class="button">
                {{ 'general.continue_shopping' | t }}
              </a>

              {%- if shop.customer_accounts_enabled and customer == null -%}
                <p class="cart__login-title h3">{{ 'sections.cart.login.title' | t }}</p>
                <p class="cart__login-paragraph">
                  {{ 'sections.cart.login.paragraph_html' | t: link: routes.account_login_url }}
                </p>
              {%- endif -%}
            </div>
          </div>
          {%- if settings.cart_drawer_collection != blank -%}
            <div class="cart-drawer__collection">
              {% render 'card-collection', card_collection: settings.cart_drawer_collection, columns: 1 %}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
      <div class="drawer__header">
        <h2 class="drawer__heading">{{ 'sections.cart.title' | t }}</h2>
        <button
          class="drawer__close"
          type="button"
          onclick="this.closest('cart-drawer').close()"
          aria-label="{{ 'accessibility.close' | t }}"
        >
          <span class="svg-wrapper">
            {{- 'icon-close.svg' | inline_asset_content -}}
          </span>
        </button>
      </div>
      <cart-drawer-items
        {% if cart == empty %}
          class=" is-empty"
        {% endif %}
      >
        <form
          action="{{ routes.cart_url }}"
          id="CartDrawer-Form"
          class="cart__contents cart-drawer__form"
          method="post"
        >
          <div id="CartDrawer-CartItems" class="drawer__contents js-contents">
            {%- if cart != empty -%}
              <div class="drawer__cart-items-wrapper">
                <table class="cart-items" role="table">
                  <thead role="rowgroup">
                    <tr role="row">
                      <th id="CartDrawer-ColumnProductImage" role="columnheader">
                        <span class="visually-hidden">{{ 'sections.cart.headings.image' | t }}</span>
                      </th>
                      <th
                        id="CartDrawer-ColumnProduct"
                        class="caption-with-letter-spacing"
                        scope="col"
                        role="columnheader"
                      >
                        {{ 'sections.cart.headings.product' | t }}
                      </th>
                      <th
                        id="CartDrawer-ColumnTotal"
                        class="right caption-with-letter-spacing"
                        scope="col"
                        role="columnheader"
                      >
                        {{ 'sections.cart.headings.total' | t }}
                      </th>
                      <th id="CartDrawer-ColumnQuantity" role="columnheader">
                        <span class="visually-hidden">{{ 'sections.cart.headings.quantity' | t }}</span>
                      </th>
                    </tr>
                  </thead>

                  <tbody role="rowgroup">
                    {%- for item in cart.items -%}
                      {%- comment -%} Custom layout for ALL products {%- endcomment -%}
                      {%- liquid
                        assign product_title = null
                        assign product_price = null
                        assign diamond_display = null
                        assign diamond_price = null
                        assign product_image_url = null
                        assign product_size = null
                        assign semi_mount_ring_product_id = 8298572611769
                        assign is_semi_mount_ring = false
                        if item.product.id == semi_mount_ring_product_id
                          assign is_semi_mount_ring = true
                        endif
                      -%}
                      {%- for property in item.properties -%}
                        {%- if property.first == 'Ring Title' -%}
                          {%- assign product_title = property.last -%}
                        {%- elsif property.first == 'Ring Price' -%}
                          {%- assign product_price = property.last | times: 100 -%}
                        {%- elsif property.first == 'Diamond' -%}
                          {%- assign diamond_display = property.last -%}
                        {%- elsif property.first == 'Diamond Price' -%}
                          {%- assign diamond_price = property.last | times: 100 -%}
                        {%- elsif property.first == 'Ring Image URL' -%}
                          {%- assign product_image_url = property.last -%}
                        {%- elsif property.first == 'Size' -%}
                          {%- assign product_size = property.last -%}
                        {%- endif -%}
                      {%- endfor -%}
                      {%- if product_size == null -%}
                        {%- for option in item.options_with_values -%}
                          {%- if option.name == 'Size' -%}
                            {%- assign product_size = option.value -%}
                          {%- endif -%}
                        {%- endfor -%}
                      {%- endif -%}
                      {%- if product_title == null -%}
                        {%- assign product_title = item.product.title -%}
                      {%- endif -%}
                      {%- if product_price == null -%}
                        {%- assign product_price = item.original_price -%}
                      {%- endif -%}
                      {%- if product_image_url == null and item.image -%}
                        {%- assign product_image_url = item.image | image_url: width: 150 -%}
                      {%- endif -%}
                      <tr
                        id="CartDrawer-Item-{{ item.index | plus: 1 }}"
                        class="cart-item cart-item--semi-mount"
                        role="row"
                      >
                        <td colspan="4" class="cart-item__semi-mount-wrapper">
                          <div class="cart-item__semi-mount-container">
                            {%- comment -%} Top row: Image and Total Price {%- endcomment -%}
                            <div class="cart-item__semi-mount-header">
                              <div class="cart-item__semi-mount-image">
                                {%- if product_image_url -%}
                                  <img
                                    src="{{ product_image_url }}"
                                    alt="{{ product_title | escape }}"
                                    loading="lazy"
                                    width="75"
                                    height="75"
                                  >
                                {%- elsif item.image -%}
                                  <img
                                    src="{{ item.image | image_url: width: 150 }}"
                                    alt="{{ item.product.title | escape }}"
                                    loading="lazy"
                                    width="75"
                                    height="75"
                                  >
                                {%- endif -%}
                              </div>
                              <div class="cart-item__semi-mount-total-price">
                                {{ item.final_line_price | money }}
                              </div>
                            </div>
                            
                            {%- comment -%} Product details row {%- endcomment -%}
                            <div class="cart-item__semi-mount-details">
                              <div class="cart-item__semi-mount-product-row">
                                <div class="cart-item__semi-mount-product-name">
                                  <span class="cart-item__semi-mount-title">{{ product_title | escape }}</span>
                                  {%- if product_size -%}
                                    <span class="cart-item__semi-mount-separator"> - </span>
                                    <span class="cart-item__semi-mount-size">Size {{ product_size }}</span>
                                  {%- endif -%}
                                </div>
                                <div class="cart-item__semi-mount-product-price">
                                  {{ product_price | money }}
                                </div>
                              </div>
                              
                              {%- if diamond_display -%}
                                <div class="cart-item__semi-mount-diamond-row">
                                  <div class="cart-item__semi-mount-diamond-name">
                                    <span class="cart-item__semi-mount-diamond-label">Diamond: </span>
                                    <span class="cart-item__semi-mount-diamond-details">{{ diamond_display }}</span>
                                  </div>
                                  {%- if diamond_price -%}
                                    <div class="cart-item__semi-mount-diamond-price">
                                      {{ diamond_price | money }}
                                    </div>
                                  {%- endif -%}
                                </div>
                              {%- endif -%}
                            </div>
                              
                              {%- comment -%} Bottom row: Quantity and Delete {%- endcomment -%}
                              <div class="cart-item__semi-mount-actions">
                                {%- liquid
                                  assign has_qty_rules = false
                                  if item.variant.quantity_rule.increment > 1 or item.variant.quantity_rule.min > 1 or item.variant.quantity_rule.max != null
                                    assign has_qty_rules = true
                                  endif
                                -%}
                                <div class="cart-item__quantity {% if has_qty_rules %} cart-item__quantity--info{% endif %}">
                                  <quantity-popover>
                                    <div class="cart-item__quantity-wrapper quantity-popover-wrapper">
                                      <quantity-input class="quantity cart-quantity">
                                        <button
                                          class="quantity__button"
                                          name="minus"
                                          type="button"
                                          {% if item.instructions and item.instructions.can_update_quantity == false %}
                                            disabled
                                          {% endif %}
                                        >
                                          <span class="visually-hidden">
                                            {{- 'products.product.quantity.decrease' | t: product: item.product.title | escape -}}
                                          </span>
                                          <svg width="14" height="2" viewBox="0 0 14 2" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <rect width="14" height="2" fill="#78686F"/>
                                          </svg>
                                        </button>
                                        <input
                                          class="quantity__input"
                                          type="number"
                                          data-quantity-variant-id="{{ item.variant.id }}"
                                          name="updates[]"
                                          value="{{ item.quantity }}"
                                          {% # theme-check-disable %}
                                          data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                                          min="0"
                                          data-min="{{ item.variant.quantity_rule.min }}"
                                          {% if item.variant.quantity_rule.max != null %}
                                            max="{{ item.variant.quantity_rule.max }}"
                                          {% endif %}
                                          step="{{ item.variant.quantity_rule.increment }}"
                                          {% # theme-check-enable %}
                                          aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                                          id="Drawer-quantity-{{ item.index | plus: 1 }}"
                                          data-index="{{ item.index | plus: 1 }}"
                                          {% if item.instructions and item.instructions.can_update_quantity == false %}
                                            disabled
                                          {% endif %}
                                        >
                                        <button
                                          class="quantity__button"
                                          name="plus"
                                          type="button"
                                          {% if item.instructions and item.instructions.can_update_quantity == false %}
                                            disabled
                                          {% endif %}
                                        >
                                          <span class="visually-hidden">
                                            {{- 'products.product.quantity.increase' | t: product: item.product.title | escape -}}
                                          </span>
                                          <svg width="18" height="18" viewBox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M9 1V17M1 9H17" stroke="#78686F" stroke-width="2" stroke-linecap="round"/>
                                          </svg>
                                        </button>
                                      </quantity-input>
                                    </div>
                                  </quantity-popover>
                                </div>
                                <cart-remove-button
                                  id="CartDrawer-Remove-{{ item.index | plus: 1 }}"
                                  data-index="{{ item.index | plus: 1 }}"
                                >
                                  <button
                                    type="button"
                                    class="cart-item__remove-button"
                                    aria-label="{{ 'sections.cart.remove_title' | t: title: product_title | default: item.product.title | escape }}"
                                    data-variant-id="{{ item.variant.id }}"
                                    {% if item.instructions and item.instructions.can_remove == false %}
                                      class="hidden"
                                    {% endif %}
                                  >
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                      <mask id="mask0_{{ item.index | plus: 1 }}_{{ item.variant.id }}" style="mask-type:alpha" maskUnits="userSpaceOnUse" x="0" y="0" width="24" height="24">
                                        <rect width="24" height="24" fill="#D9D9D9"/>
                                      </mask>
                                      <g mask="url(#mask0_{{ item.index | plus: 1 }}_{{ item.variant.id }})">
                                        <path d="M7 21C6.45 21 5.97917 20.8042 5.5875 20.4125C5.19583 20.0208 5 19.55 5 19V6H4V4H9V3H15V4H20V6H19V19C19 19.55 18.8042 20.0208 18.4125 20.4125C18.0208 20.8042 17.55 21 17 21H7ZM17 6H7V19H17V6ZM9 17H11V8H9V17ZM13 17H15V8H13V17Z" fill="#78686F"/>
                                      </g>
                                    </svg>
                                  </button>
                                </cart-remove-button>
                              </div>
                            </div>
                          </td>
                        </tr>
                    {%- endfor -%}
                  </tbody>
                </table>
              </div>
            {%- endif -%}
            <p id="CartDrawer-LiveRegionText" class="visually-hidden" role="status"></p>
            <p id="CartDrawer-LineItemStatus" class="visually-hidden" aria-hidden="true" role="status">
              {{ 'accessibility.loading' | t }}
            </p>
          </div>
          <div id="CartDrawer-CartErrors" role="alert"></div>
        </form>
      </cart-drawer-items>
      <div class="drawer__footer">
        {%- if settings.show_cart_note -%}
          <details id="Details-CartDrawer">
            <summary>
              <span class="summary__title">
                {{ 'sections.cart.note' | t }}
                {{- 'icon-caret.svg' | inline_asset_content -}}
              </span>
            </summary>
            <cart-note class="cart__note field">
              <label class="visually-hidden" for="CartDrawer-Note">{{ 'sections.cart.note' | t }}</label>
              <textarea
                id="CartDrawer-Note"
                class="text-area text-area--resize-vertical field__input"
                name="note"
                placeholder="{{ 'sections.cart.note' | t }}"
              >{{ cart.note }}</textarea>
            </cart-note>
          </details>
        {%- endif -%}

        <!-- Start blocks -->
        <!-- Subtotals -->

        <div class="cart-drawer__footer" {{ block.shopify_attributes }}>
          <div>
            {%- if cart.cart_level_discount_applications.size > 0 -%}
              <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                {%- for discount in cart.cart_level_discount_applications -%}
                  <li class="discounts__discount discounts__discount--end">
                    {{- 'icon-discount.svg' | inline_asset_content -}}
                    {{ discount.title | escape }}
                    (-{{ discount.total_allocated_amount | money }})
                  </li>
                {%- endfor -%}
              </ul>
            {%- endif -%}
          </div>

          <div class="totals" role="status">
            <h2 class="totals__total">{{ 'sections.cart.estimated_total' | t }}</h2>
            <p class="totals__total-value">{{ cart.total_price | money_with_currency }}</p>
          </div>

          <small class="tax-note caption-large rte">
            {%- if cart.duties_included and cart.taxes_included -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.duties_and_taxes_included_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.duties_and_taxes_included_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included == false and cart.taxes_included -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.taxes_included_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.taxes_included_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included and cart.taxes_included == false -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.duties_included_taxes_at_checkout_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- elsif cart.duties_included == false and cart.taxes_included == false -%}
              {%- if shop.shipping_policy.body == blank -%}
                {{ 'sections.cart.taxes_at_checkout_shipping_at_checkout_without_policy' | t }}
              {%- else -%}
                {{
                  'sections.cart.taxes_at_checkout_shipping_at_checkout_with_policy_html'
                  | t: link: shop.shipping_policy.url
                }}
              {%- endif -%}
            {%- endif -%}
          </small>
        </div>

        <!-- CTAs -->

        <div class="cart__ctas" {{ block.shopify_attributes }}>
          <button
            type="submit"
            id="CartDrawer-Checkout"
