<div class="product-card">
  <div class="product-images">
    <div class="product-image-container">
      <div class="image-bg-1"></div>
      <div class="image-bg-2"></div>
      <div class="image-bg-3"></div>
      <div class="image-bg-4"></div>
      <div class="image-bg-4"></div>
    </div>
    <div class="availability-tag"><div class="availability-badge-text">Available</div></div>
    <div class="filter-button"><img class="filter-icon" src="img/filter.svg"></div>
  </div>
  <div class="product-details">
    <div class="product-header">
      <div class="product-title"><div class="product-title-text">{{product.title | truncate: 28}}</div></div>
      <div class="product-specs-header">
        <div class="spec-detail">Stainless Steel Blue Dial</div>
        <div class="divider">|</div>
        <div class="spec-detail">41mm</div>
      </div>
    </div>
    <div class="divider-section"><div class="divider-line"></div></div>
    <div class="specs-container">
      <div class="spec-row">
        <div class="spec-label">MODEL</div>
        <div class="spec-value">126613LB</div>
      </div>
      <div class="spec-row">
        <div class="spec-label">YEAR</div>
        <div class="spec-value">2022</div>
      </div>
      <div class="spec-row">
        <div class="spec-label">CONDITION</div>
        <div class="spec-value">Retail Ready</div>
      </div>
    </div>
    <div class="divider-section-2"><div class="divider-line-2"></div></div>
    <div class="price-action-wrapper">
      <div class="price-container"><div class="product-price">$14,415</div></div>
      <button class="btn-primary"><div class="btn-text">Buy Now</div></button>
    </div>
  </div>
</div>
